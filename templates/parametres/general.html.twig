 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <h5 class="title_form text-black text-uppercase">Creation devise</h5>
        <div class="row">
            <div class="col-md-3">
                <label for="devise_symbole" class="mt-2 font-weight-bold">Symbole</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Lettre</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-2">
                <label for="nom" class="mt-2 font-weight-bold text-info">Lettre</label>
                <input type="text" disabled name="nom" id="nom" class="form-control" placeholder="1 symbole">
            </div>
            <div class="col-md-1 text-center align-middle">
                <label for="nom" class="mt-2 font-weight-bold">&nbsp;</label>
                <div class="w-100 h5 text-secondary">
                    <i class="fa fa-exchange-alt"></i>
                </div>
                
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Francs Comorien (Base)</label>
                <input type="number" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        <div class="w-100 text-right p-3">
            <button class="btn btn-sm btn-perso-one px-3"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
        </div>
        <div class="w-100 barre_dashed p-3">
            <h5 class="title_form text-black text-uppercase">Liste des devises</h5>
            <div class="table-responsive mt-2">
                <table class="table-sm table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Symbole</th>
                            <th>Lettre</th>
                            <th>Devise</th>
                            <th></th>
                            <th>Base</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>-</td>
                            <td>-</td>
                            <td>1 symbole</td>
                            <td class="align-middle text-center">
                                <i class="fa fa-exchange-alt"></i>
                            </td>
                            <td>-</td>
                            <td class="text-center">
                                <button type="button" class="btn-outline-warning btn btn-sm font-smaller"><i class="fa fa-edit"></i></button>
                                <button type="button" class="btn-outline-danger ml-1 btn btn-sm font-smaller"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 

    </div>
</div>
{% endblock %}


