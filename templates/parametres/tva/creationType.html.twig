 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/tva.js')}}"></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <form id="formTypeTva">
            <div class="row">
                <div class="col-md-4">
                    <label for="tva_designation" class="font-weight-bold">Désignation</label>
                    <input type="text" oninput="this.value = this.value.toUpperCase();" name="tva_designation" id="tva_designation" class="form-control tva_designation" placeholder=". . .">
                </div>
                <div class="col-md-3">
                    <label for="tva_valeur" class="font-weight-bold">Valeur (%)</label>
                    <input type="number" step="any" name="tva_valeur" id="tva_valeur" class="form-control tva_valeur" placeholder=". . .">
                </div>
                <div class="col-md-2">
                    <label for="nom" class="font-weight-bold">&nbsp;</label>
                    <button type="submit" class="btn btn-sm btn-block btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                </div>
            </div>
        </form>
        <div class="table-responsive mt-3 p-3 mb-4 barre_dashed">
            <table class="table table-bordered table-sm">
                <thead class="thead-light">
                    <tr>
                        <th>Désignation</th>
                        <th>Valeur</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for paramTvaType in paramTvaTypes %}
                        <tr id="{{paramTvaType.id}}">
                            <td>{{paramTvaType.designation}}</td>
                            <td>{{paramTvaType.valeur}} %</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></button>
                                <button class="btn btn-sm btn-outline-danger font-smaller"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


