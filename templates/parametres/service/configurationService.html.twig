 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <form id="formService">
            <h5 class="title_form text-black text-uppercase">Cr√©ation Service</h5>
            <div class="row">
                <div class="col-md-4">
                    <label for="param_srv_nom" class="mt-2 font-weight-bold">Nom Service</label>
                    <input type="text" name="param_srv_nom" oninput="this.value = this.value.toUpperCase();" id="param_srv_nom" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-3">
                    <label for="nom" class="mt-2 font-weight-bold">&nbsp;</label>
                    <button type="submit" class="btn btn-sm btn-block btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                </div>
            </div>
        </form>
        <div class="table-responsive mt-3 py-3 barre_dashed">
            <h5 class="title_form text-black text-uppercase">Liste des Services</h5>
            <table class="table table-sm table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Nom</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for service in services %}
                        <tr>
                            <td class="nom_service">{{service.nom}}</td>
                            <td class="text-center align-middle">
                                <button data-value="{{service.id}}" class="btn btn_srv_edit btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></button>
                                <button data-value="{{service.id}}" class="btn btn_srv_delete btn-sm ml-2 btn-outline-danger font-smaller"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


