 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/utilisateur.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <form id="formAgent">
            <div class="row"> 
                <div class="col-md-4">
                    <label for="username" class="mt-2 font-weight-bold">Nom d'utilisateur*</label>
                    <input type="text" oninput="this.value = this.value.toUpperCase();" name="username" id="username" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-4">
                    <label for="email" class="mt-2 font-weight-bold">Email* </label>
                    <input type="email" name="email" id="email"  class="form-control" placeholder=". . ." required>
                </div>
                <div class="col-md-4">
                    <label for="password" class="mt-2 font-weight-bold">Mot de passe</label>
                    <input type="text" name="password" id="password" class="form-control" placeholder=". . ." value="{{password}}">
                </div>
                <div class="col-md-4">
                    <label for="poste" class="mt-4 font-weight-bold">Reponsabilité</label>
                    <input type="text" oninput="this.value = this.value.toUpperCase();" name="poste" id="poste"  class="form-control" placeholder=". . .">
                </div>
                {# <div class="col-md-4">
                    <label for="poste" class="mt-4 font-weight-bold">Abonnement jusqu'au</label>
                    <input type="text" name="abonnement" id="abonnement" class="form-control" placeholder=". . .">
                </div> #}
            </div>
            <div class="w-100">
                <div class="badge badge-success w-100 badge_pass py-1 mt-3">Forte</div>
                    <div class="alert alert-info alert_pass mt-2">
                        <ul class="list-unstyled">
                            <li><i class="fa fa-info-circle"></i>&nbsp;Le mot  de passe doit contenir au minimum 8 caractères, à savoir : </li>
                            <li>Au moins une lettre minuscule,</li>
                            <li>Une lettre majuscule,</li>
                            <li>Un caractère spécial,</li>
                            <li>Un chiffre,</li>
                        </ul>
                    </div>
            </div>
            {% if with_foot %}
                <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                    <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                </div>
            {% endif %} 
        </form>
    </div>
</div>
{% endblock %}


