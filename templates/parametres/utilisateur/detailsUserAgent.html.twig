 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row"> 
            <div class="col-md-4">
                <label for="username" class="mt-2 font-weight-bold">Nom d'utilisateur</label>
                <input type="text" oninput="this.value = this.value.toUpperCase();" name="username" id="username" readonly class="form-control bg-white text-info font-weight-bold" value="{{agent.username|upper}}">
            </div>
            <div class="col-md-4">
                <label for="email" class="mt-2 font-weight-bold">Email* </label>
                <input type="email" name="email" id="email"  class="form-control bg-white text-info font-weight-bold" readonly value="{{agent.email}}" >
            </div>
            <div class="col-md-4">
                <label for="poste" class="mt-2 font-weight-bold">Reponsabilit√©</label>
                <input type="text" oninput="this.value = this.value.toUpperCase();" name="poste" id="poste" readonly class="form-control bg-white text-info font-weight-bold" value="{{agent.poste|upper}}">
            </div>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-edit"></i>&nbsp;Modifier mot de passe</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


