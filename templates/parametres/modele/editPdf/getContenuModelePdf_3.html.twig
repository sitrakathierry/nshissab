<div class="d-flex flex-row justify-content-center">
    <div class="w-100 px-4">
        <input type="text" name="modele_editor" id="modele_editor" class="form-control" value="{{modelePdf.contenu}}">
    </div>
    <div class="parentImgRight text-center">
        <div class="modele_image_right">
            {{modelePdf.imageRight|raw}}
            {# <img src="{{asset('data/images/default.jpg')}}" class="img img-fluid" alt=""> #}
        </div>
        <input type="file" name="fileImageRight" id="modele_image_file_right" class="d-none">
        <button type="button" class="btn btn-sm btn-success importImageRight btn-block mt-2"><i class="fa fa-image"></i>&nbsp;Ajouter une Image</button>
        <input type="hidden" id="mod_image_origine_right" name="mod_image_origine_right">
        <div class="d-flex flex-row mt-2 mod_content_dimension" >
            <div class="w-100 pr-1">
                <label for="mod_val_largeur" class="font-weight-bold mb-0">Largeur</label>
                <input type="number" name="mod_val_largeur" data-target=".modele_image_right" data-value="#data_modele_image_right" id="mod_val_largeur" data-origine="#mod_image_origine_right" class="form-control form-control-sm mod_val_largeur" placeholder=". . ." >
            </div>
            <div class="w-100 pl-1">
                <label for="mod_val_hauteur" class="font-weight-bold mb-0">Hauteur</label>
                <input type="number" name="mod_val_hauteur" data-target=".modele_image_right" data-value="#data_modele_image_right" id="mod_val_hauteur" data-origine="#mod_image_origine_right" class="form-control form-control-sm mod_val_hauteur" placeholder=". . ." >
            </div>
        </div>
    </div>
</div>

