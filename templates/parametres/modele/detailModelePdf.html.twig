 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/modele.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/modele.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/editModele.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">
        {{titlePage}} N° : <span class="text-white px-2 py-1 rounded badge-warning">{{modelePdf.nom}}</span>
        </h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <form id="formUpdateModele">
            <input type="hidden" name="mod_id_modele" id="mod_id_modele" value="{{modelePdf.id}}">
            <div class="row">
                <div class="col-md-4">
                    <label for="modele_nom" class="font-weight-bold">Nom Modèle</label>
                    <input type="text" name="modele_nom" oninput="this.value = this.value.toUpperCase();" id="modele_nom" value="{{modelePdf.nom}}" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-4">
                    <h5 class="title_form text-black text-uppercase mt-1">Sélectionner le modèle à créer</h5>
                    <div class="w-100 d-flex flex-row align-items-center">
                        <button type="button" data-content="<i class='fa fa-diamond'></i>&nbsp;Entête de page" class="btn {{modelePdf.type == "ENTETE" ? "btn-primary" : "btn-outline-primary" }}  text-uppercase edit_modele mx-1 w-100 btn-sm" data-value="ENTETE" data-class="btn-primary"><i class="fa fa-diamond"></i>&nbsp;Entête de page</button>
                        <button type="button" data-content="<i class='fa fa-diamond'></i>&nbsp;Bas de page" class="btn {{modelePdf.type == "BAS" ? "btn-primary" : "btn-outline-primary" }} btn-outline-primary text-uppercase edit_modele mx-1 w-100 btn-sm" data-value="BAS" data-class="btn-primary"><i class='fa fa-diamond'></i>&nbsp;Bas de page</button>
                    </div>
                    <input type="hidden" name="modele_value" id="modele_value" value="{{modelePdf.type}}">
                </div>
            </div>
            <input type="hidden" name="pdf_contenu_modele" class="pdf_contenu_modele" >
            <input type="hidden" name="data_modele_image_left" id="data_modele_image_left" value="{{modelePdf.imageLeft}}" >
            <input type="hidden" name="data_modele_image_right" id="data_modele_image_right" value="{{modelePdf.imageRight}}" >
            <input type="hidden" name="forme_modele_pdf" id="forme_modele_pdf" value="{{modelePdf.formeModele}}" >
            {# <div class="d-flex flex-wrap align-items-center mt-3">
                <div class=" select_modele p-3">
                    <div data-indice="1" style="background-image:url('{{asset('data/pdf/modele-1.png')}}');" class="w-100 imageModele border d-flex flex-column align-items-center justify-content-center h3 text-primary"></div>
                </div>
                <div class=" select_modele p-3">
