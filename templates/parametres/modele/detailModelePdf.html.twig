                </div>
                <div class=" select_modele p-3">
                    <div data-indice="4" style="background-image:url('{{asset('data/pdf/modele-4.png')}}')" class="w-100 imageModele border d-flex flex-column align-items-center justify-content-center h3 text-primary"></div>
                </div>
                <div class="select_modele p-3">
                    <div data-indice="5" style="background-image:url('{{asset('data/pdf/modele-5.png')}}')" class="w-100 imageModele border d-flex flex-column align-items-center justify-content-center h3 text-primary"></div>
                </div>
                <div class=" select_modele p-3">
                    <div data-indice="6" style="background-image:url('{{asset('data/pdf/modele-6.png')}}')" class="w-100 imageModele border d-flex flex-column align-items-center justify-content-center h3 text-primary"></div>
                </div>
                <div class="select_modele p-3">
                    <div data-indice="7" style="background-image:url('{{asset('data/pdf/modele-7.png')}}')" class="w-100 imageModele border d-flex flex-column align-items-center justify-content-center h3 text-primary"></div>
                </div>
            </div> #}
            <div id="contentEditModele" class="barre_dashed mt-3 py-3">
                {{templateModele|raw}}
            </div>
            {% if with_foot %}
                <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                    <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-database"></i>&nbsp;Mette à jour</button>
                </div>
            {% endif %} 
        </form> 
    </div>
</div>
{% endblock %}


