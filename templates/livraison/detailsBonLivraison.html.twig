 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }} 
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}} N° : <span class="text-white px-2 py-1 rounded badge-warning">{{livraison.numLivraison}}</span></h4>
    </div>
    <form id="lvrUpdateForm">
        <input type="hidden" name="lvr_spec_form" value="UPDATE">
        <input type="hidden" name="lvr_id_bon_livraison" value="{{livraison.id}}">
        <div class="container-fluid px-3 pt-3">
            <div class="row"> 
                <div class="col-md-3 mt-3">
                    <h5 class="font-medium" >N° {{livraison.libelleNum}} : <span class="text-primary">{{livraison.valeurNum}}</span></h5>
                </div>
                <div class="col-md-3 mt-3">
                    <h5 class="font-medium" >Client : <span class="text-primary">{{livraison.client|upper}}</span></h5>
                </div>
            </div>
            <div class="w-100">
                <label for="lvr_creation_description" class="mt-3 font-weight-bold text-uppercase">Déscription</label>
                <textarea name="lvr_creation_description" id="lvr_creation_description" class="lvr_creation_description form-control" cols="30" rows="10">{{livraison.description}}</textarea>
            </div>
            <div class="table-responsive mt-4">
                <table class="table table-bordered table-sm"> 
                    <thead class="thead-light">
                        <tr>
                            <th>Type</th>
                            <th>Désignation</th>
                            <th>Quantité</th>
                            <th></th>
                            <th>Date de livraison</th>
                        </tr>
                    </thead>
                    <tbody> 
                        {% set totalQte = 0 %}
                        {% for detail in details %}
                            <tr>
                                <td>{{ detail.type|upper }}</td>
                                <td>{{ detail.designation|raw}}</td>
                                <td>{{ detail.quantite }}</td>
                                <td class="text-center align-middle">
                                    {% if detail.lvrStatut is null %}
                                        <button type="button" value="{{ detail.id }}" class="btn btn_lvr_check btn-outline-success btn-sm font-smaller"><i class="fa fa-check"></i></button>
                                    {% else %}
                                        <b class="text-success font-smaller">{{detail.nomLvrStatut|upper}}</b>
                                    {% endif %}
                                </td>
                                <td>{{detail.dateLivraison}}</td>
                            </tr>
                            {% set totalQte = totalQte + detail.quantite %}
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="2" >Total</th>
                            <th colspan="2" class="bg-light">{{totalQte}}</th>
                            <td class="bg-light"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="w-100">
                <div class="row">
                    <div class="col-3">
                        <label for="lvr_date_livraison" class="mt-2 font-weight-bold">Date de livraison</label>
                        <input type="text" name="lvr_date_livraison" id="lvr_date_livraison" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-3">
                        <label for="" class="mt-2 font-weight-bold">&nbsp;</label>
                        <button type="button" class="btn btn-success btn-sm btn-block btn_ajouter_date_livraison"><i class="fa fa-plus"></i>&nbsp;Ajouter</button>
                    </div>
                </div>
                <div class="table-responsive mt-3 w-50">
                    <table class="table table-sm table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Date de livraison</th>
                                <th>Nombre Produit livré</th>
                            </tr>
                        </thead>
                        <tbody class="elemDateLvr">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-7"></div>
                <div class="col-md-5"> 
                    <label for="nom" class="mt-1 font-weight-bold text-uppercase">à,</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-location"></i></span> 
                        </div>
                        <input type="text" class="form-control" name="lvr_lieu" value="{{ livraison.lieu }}" placeholder=". . ." aria-label="Lieu Facture" id="lvr_lieu">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-7"></div>
                <div class="col-md-5"> 
                    <label for="nom" class="mt-1 font-weight-bold">Le,</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-calendar"></i></span>
                        </div>
                        <input type="text" disabled class="form-control" name="lvr_date" value="{{ livraison.date }}" placeholder=". . ." aria-label="Date Facture" id="lvr_date">
                    </div>
                </div>
            </div>
            {% if with_foot %}
                <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                    <button onclick="history.back()" class="btn btn-sm ml-2 btn-secondary text-white"><i class="fa fa-arrow-left"></i>&nbsp;Retour</button>
                    <button type="button" class="btn btn-sm ml-2 btn-danger text-white"><i class="fa fa-trash"></i>&nbsp;Supprimer</button>
                    <button type="button" data-value="{{livraison.id}}" class="btn btn-sm lvr_btn_imprime ml-2 btn-info text-white"><i class="fa fa-print"></i>&nbsp;Imprimer</button>
                    <button type="submit" class="btn btn-sm ml-2 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Mettre à jour</button>
                </div>
            {% endif %} 
        </div>
    </form>
</div>
{% endblock %}


