 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 {{ not with_foot ? "pb-3" : "" }} pt-3">
        <h5 class="title_form text-black text-uppercase">Nouvelle Catégorie</h5>
        <form id="formSousCategorie">
            <div class="row">
                <div class="col-3">
                    <label for="coiff_categorie" class="mt-2 font-weight-bold">Categorie</label>
                    <select name="coiff_categorie" class="custom-select chosen_select custom-select-sm" id="coiff_categorie">
                        <option value="">-</option>
                        <option value="HOMME">{{"Homme"|upper}}</option>
                        <option value="FEMME">{{"Femme"|upper}}</option>
                    </select>
                </div>
                <div class="col-4">
                    <label for="coiff_sous_categorie" class="mt-2 font-weight-bold">Sous Categorie</label>
                    <input type="text" name="coiff_sous_categorie" oninput="this.value = this.value.toUpperCase();" id="coiff_sous_categorie" class="form-control" placeholder=". . .">
                </div>
                <div class="col-3">
                    <label for="" class="mt-2 font-weight-bold">&nbsp;</label>
                    <button type="submit" class="btn btn-sm btn-block btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                </div>
                {# <div class="col-2">
                    <label for="" class="mt-2 font-weight-bold">&nbsp;</label>
                    <button type="button" class="btn btn-sm btn_test btn-block btn-success"><i class="fa fa-save"></i>&nbsp;Test</button>
                </div> #}
            </div>  
        </form>
        <div class="barre_dashed mt-3 py-3">
            <h5 class="title_form text-black text-uppercase">Liste des Catégories</h5>
            <div class="row">
                <div class="col-3">
                    <label for="nom" class="font-weight-bold">Recherche</label>
                    <select name="prod_categorie" class="custom-select chosen_select custom-select-sm" id="prod_categorie">
                        <option value="">-</option>
                    </select>
                </div>
            </div>
            <div class="table-responsive mt-3 w-75">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Catégorie</th>
                            <th>Sous Catégorie</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for catCoupe in catCoupes %}
                            <tr>
                                <td>{{catCoupe.genre}}</td>
                                <td>{{catCoupe.nom}}</td>
                                <td class="text-center align-middle">
                                    <button type="button" data-value="{{catCoupe.id}}" class="btn btn-sm mx-1 font-smaller btn-outline-warning"><i class="fa fa-edit"></i></button>
                                    <button type="button" data-value="{{catCoupe.id}}" class="btn btn-sm mx-1 font-smaller btn-outline-danger"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Ajout Elément Restaurant</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm text-uppercase btn-secondary" data-dismiss="modal">Fermer</button>
        <button type="button" class="btn btn-sm text-uppercase btn-perso-one">Valider</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}


