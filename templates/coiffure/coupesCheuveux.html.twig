 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 {{ not with_foot ? "pb-3" : "" }} pt-3">
        <div class="d-flex align-items-center flex-row mb-3">
            <h5 class="title_form text-black text-uppercase mb-0">Création/Attribution Prix</h5>
            <button type="button" class="btn btn-sm px-3 ml-3 btn-success"><i class="fa fa-cube"></i>&nbsp;Nouveau</button>
            <button type="button" class="btn btn-sm px-3 ml-3 btn-outline-success"><i class="fa fa-layer-group"></i>&nbsp;Existant</button>
        </div>
        <form id="formSoins">
            <div class="row">
                <div class="col-2 pt-3">
                    <div class="d-flex flex-row align-items-center justify-content-between">
                        <img src="{{asset('data/images/default.jpg')}}" class="img modele_image img-fluid" alt="">
                        <input type="file" name="fileImage" id="modele_image_file" class="d-none">
                        <button type="button" class="btn btn-sm btn-success importImage mt-2"><i class="fa fa-download"></i></button>
                        <input type="hidden" id="mod_image_origine" name="mod_image_origine">
                    </div>
                </div>
                <div class="col-3">
                    <label for="coiff_sous_categorie" class="mt-2 font-weight-bold">Sous Catégorie</label>
                    <select name="coiff_sous_categorie" class="custom-select chosen_select custom-select-sm" id="coiff_sous_categorie">
                        <option value="">-</option>
                        {% for categorie in categories %}
                            <option value="{{categorie.id}}" >{{categorie.genre|upper}} | {{categorie.nom|upper}}</option>
                        {% endfor %} 
                    </select>
                </div>
                <div class="col-3">
                    <label for="coiff_coupes_nom" class="mt-2 font-weight-bold">Désignation</label>
                    <input type="text" name="coiff_coupes_nom" id="coiff_coupes_nom" oninput="this.value = this.value.toUpperCase();" class="form-control" placeholder=". . .">
                </div>
                <div class="col-2">
                    <label for="coiff_coupes_prix" class="mt-2 font-weight-bold">Prix</label>
                    <input type="number" step="any" name="coiff_coupes_prix" id="coiff_coupes_prix" class="form-control" placeholder=". . .">
                </div>
                <div class="col-2">
                    <label for="" class="mt-2 font-weight-bold">&nbsp;</label>
                    <button type="submit" class="btn btn-sm btn-block btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                </div>
            </div>
        </form>
        
        <div class="barre_dashed mt-3 py-3">
            <h5 class="title_form text-black text-uppercase">Liste des Soins</h5>
            <div class="table-responsive mt-3">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Catégorie</th>
                            <th>Désignation</th>
                            <th>Prix</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cpPrix in cpPrixs %}
                            <tr>
                                <td>{{cpPrix.categorie|upper}}</td>
                                <td>{{cpPrix.nom|upper}}</td>
                                <td>{{cpPrix.prix}}</td>
                                <td class="text-center align-middle">
                                    <button type="button" class="btn btn-sm mx-1 font-smaller btn-outline-warning"><i class="fa fa-edit"></i></button>
                                    <button type="button" class="btn btn-sm mx-1 font-smaller btn-outline-danger"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


