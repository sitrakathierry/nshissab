 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/batiment.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-2">
        <div class="row">
            <div class="col-md-6"> 
                <label for="btn_enc_nom" class="font-weight-bold">Nom</label>
                <input type="text" readonly value="{{enoncee.nom}}" oninput="this.value = this.value.toUpperCase();" name="btn_enc_nom" id="btn_enc_nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        <div class="w-100 barre_dashed my-3"></div>
        <form id="formCategorie">
            <h5 class="title_form text-black text-uppercase">Création Categorie</h5>
            <div class="row">
                <div class="col-md-4"> 
                    <label for="btn_cat_nom" class="font-weight-bold">Nom</label>
                    <input type="text" oninput="this.value = this.value.toUpperCase();" name="btn_cat_nom" id="btn_cat_nom" class="form-control" placeholder=". . .">
                    <input type="hidden" name="btn_cat_enonce" value="{{enoncee.id}}">
                </div>
                <div class="col-md-2"> 
                    <label for="btn_cat_mesure" class="font-weight-bold">Mésure</label>
                    <select name="btn_cat_mesure" class="custom-select chosen_select custom-select-sm" id="btn_cat_mesure">
                        <option value="">-</option>
                        {% for mesure in mesures %}
                            <option value="{{mesure.id}}">{{mesure.notation}} | {{mesure.nom|upper}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="nom" class="font-weight-bold">&nbsp;</label>
                    <button type="submit" class="btn btn-sm btn-success btn-block"><i class="fa fa-save"></i>&nbsp;Ajouter</button>
                </div>
            </div>
        </form>
        <div class="barre_dashed mt-3 py-3">
            <div class="table-responsive">
                <h5 class="title_form text-black text-uppercase">Liste des Categories</h5>
                <table class="table table-sm table-bordered mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nom</th>
                            <th>Mésure</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td>{{categorie.nom}}</td>
                                <td>{{categorie.mesure.notation}}</td>
                                <td class="text-center align-middle">
                                    <a href="#" class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></a>
                                    <button class="btn btn-sm ml-1 btn-outline-danger font-smaller"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


