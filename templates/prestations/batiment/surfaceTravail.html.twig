 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/batiment.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-2">
        <div class="px-3">
            <form id="formSurface" >
                <h5 class="title_form text-black text-uppercase">Création Surface de Travail</h5>
                <div class="row">
                    <div class="col-md-5">
                        <label for="btp_surface_nom" class="font-weight-bold">Désignation</label>
                        <input type="text" oninput="this.value = this.value.toUpperCase();" name="btp_surface_nom" id="btp_surface_nom" class="form-control" placeholder=". . .">
                    </div>
                    {# <div class="col-md-3">
                        <label for="btp_mes_notation" class="font-weight-bold">Notation</label>
                        <input type="text" name="btp_mes_notation" id="btp_mes_notation" class="form-control" placeholder=". . .">
                    </div> #}
                    <div class="col-md-3">
                        <label for="nom" class="font-weight-bold">&nbsp;</label>
                        <button type="submit" class="btn btn-sm btn-perso-one btn-block"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="barre_dashed mt-3 p-3">
            <h5 class="title_form text-black text-uppercase">Liste des Surfaces</h5>
            <div class="table-responsive mt-3">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Désignation</th>
                            {# <th>Notation</th> #}
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for surface in surfaces %}
                            <tr>
                                <td>{{surface.nom|upper}}</td>
                                {# <td>{{mesure.notation}}</td> #}
                                <td class="text-center align-middle">
                                    <button value="{{surface.id}}" class="btn btn-sm btn-outline-warning btn_edit_surface font-smaller"><i class="fa fa-edit"></i></button>
                                    <button class="btn btn-sm ml-1 btn_delete_surface btn-outline-danger font-smaller"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


