 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/batiment.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}&nbsp;<span class="text-white px-2 py-1 rounded badge-warning">{{element.nom}}</span></h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row">
            <div class="col-md-3"> 
                <label for="btp_elem_nom" class="font-weight-bold">Désignation</label>
                <input type="text" readonly value="{{element.nom}}" name="btp_elem_nom" id="btp_elem_nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="btp_elem_mesure" class="font-weight-bold">Mésure</label>
                <input type="text" readonly value="{{element.mesure.notation}} | {{element.mesure.nom|upper}}" name="btp_elem_mesure" id="btp_elem_mesure" class="form-control" placeholder=". . .">
            </div>
            {# <div class="col-md-3">
                <label for="nom" class="font-weight-bold">&nbsp;</label>
                <button class="btn btn-sm btn-perso-one btn-block"><i class="fa fa-save"></i>&nbsp;Mettre à jour</button>
            </div> #}
        </div>
        <div class="barre_dashed mt-3 py-3">
            <form id="formPrix" >
                <h5 class="title_form text-black text-uppercase">Attribution de prix</h5>
                <div class="row">
                    <div class="col-md-3">
                        <label for="btp_prix_pays" class="font-weight-bold">Pays</label>
                        <input type="text" oninput="this.value = this.value.toUpperCase();" name="btp_prix_pays" id="btp_prix_pays" class="form-control" placeholder=". . .">
                        <input type="hidden" name="btp_elem_id" id="btp_elem_id" value="{{element.id}}" >
                    </div>
                    <div class="col-md-3">
                        <label for="btp_prix_montant" class="font-weight-bold">Prix Unitaire</label>
                        <input type="number" step="any" name="btp_prix_montant" id="btp_prix_montant" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="nom" class="font-weight-bold">&nbsp;</label>
                        <button class="btn btn-sm btn-success btn-block"><i class="fa fa-database"></i>&nbsp;Ajouter</button>
                    </div>
                </div>
            </form>
            <div class="table-responsive barre_dashed mt-3 pt-3">
                <h5 class="title_form text-black text-uppercase">Liste des éléments</h5>
                <table class="table table-sm table-bordered mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>Désignation</th>
                            <th>Mésure</th>
                            <th>Pays</th>
                            <th>Prix Unitaire</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for elemPrix in elemPrixs %}
                            <tr>
                                <td>{{element.nom}}</td>
                                <td>{{element.mesure.notation}}</td>
                                <td>{{elemPrix.pays}}</td>
                                <td>{{elemPrix.montant}}</td>
                                <td class="text-center align-middle">
                                    <button class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></button>
                                    <button class="btn btn-sm ml-1 btn-outline-danger font-smaller"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}
