 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <form id="formLocataire">
            <div class="row">
                <div class="col-3">
                    <label for="nom" class="mt-2 font-weight-bold">Nom</label>
                    <input type="hidden" name="lct_loc_id" value="{{locataire.id}}">
                    <input type="text" readonly="true" oninput="this.value = this.value.toUpperCase();" name="lct_nom" id="lct_nom" class="form-control font-weight-bold text-primary" value="{{locataire.nom|upper}}">
                </div>
                <div class="col-3">
                    <label for="nom" class="mt-2 font-weight-bold">Téléphone</label>
                    <input type="text" readonly="true" name="lct_tel" id="lct_tel" class="form-control font-weight-bold text-primary" value="{{locataire.telephone}}">
                </div>
                <div class="col-3">
                    <label for="nom" class="mt-2 font-weight-bold">Adresse</label>
                    <input type="text" readonly="true" oninput="this.value = this.value.toUpperCase();" name="lct_adresse" id="lct_adresse" class="form-control font-weight-bold text-primary" value="{{locataire.adresse|upper}}">
                </div>
                <div class="col-3">
                    <label for="nom" class="mt-2 font-weight-bold">Email</label>
                    <input type="email" readonly="true" name="lct_email" id="lct_email" class="form-control font-weight-bold text-primary" value="{{locataire.email}}">
                </div>
            </div>
            {% if with_foot %}
                <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                    <button type="button" class="btn lct_btn_modifier btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Modifier</button>
                </div>
            {% endif %} 
        </form>

    </div>
</div>
{% endblock %}


