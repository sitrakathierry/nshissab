<div class="table-responsive mt-4 content_auto">
    <table class="table-sm mb-0 table table-bordered">
        <thead class="thead-dark">
            <tr class="text-uppercase">
                <th>Désignation</th>
                <th>Date Paiement</th>
                <th>Montant payé</th>
                <th>Commission</th>
                <th class="text-center">Versement</th>
                <th class="text-center">Séléction</th>
            </tr>
        </thead>
        <tbody>
            {% set totalPayee = 0 %}
            {% set totalCommission = 0 %}
            {% for relevePaiement in relevePaiements %}
                <tr>
                    <td>{{ relevePaiement.designation | upper}}</td>
                    <td>{{ relevePaiement.datePaiement}}</td>
                    <th>{{ relevePaiement.montant }}</th>
                    <th>{{ relevePaiement.commission }}</th>
                    <th class="text-center align-middle">
                        {{relevePaiement.versement|raw}}
                    </th>
                    <th class="text-center align-middle">{{relevePaiement.selection|raw}}</th>
                </tr>
                {% set totalPayee = totalPayee + relevePaiement.montant %}
                {% set totalCommission = totalCommission + relevePaiement.commissionVal %}
            {% endfor %}
        </tbody>
    </table>
</div>
<table class="table-sm table table-bordered font-smaller">
    <tfoot>
        <tr>
            <th colspan="4" class="text-uppercase">Total Commission</th>
            <th  class="text-white bg-purple" >{{ totalCommission }}</th>
        </tr>
        <tr>
            <th colspan="4" class="text-uppercase">Montant Total Payée</th>
            <th  class="text-white bg-success" >{{ totalPayee }}</th>
        </tr>
        <tr>
            <th colspan="4" class="text-uppercase">Montant Restant</th>
            <th  class="text-white bg-primary" >{{ parentContrat.montantContrat - totalPayee }}</th>
        </tr>
        <tr>
            <th colspan="4" class="text-uppercase">Montant Total Contrat</th>
            <th  class="text-white bg-dark" >{{ parentContrat.montantContrat }}</th>
        </tr>
    </tfoot>
</table>
<div class="w-100">
    Arrêté la présente facture à la somme de <span id="cmd_somme_lettre" class="font-weight-bold text-uppercase">{{ lettreReleve | upper}}</span>
</div>