<div class="table-responsive mt-4 content_auto">
    <table class="table-sm mb-0 table table-bordered">
        <thead class="thead-dark">
            <tr class="text-uppercase">
                <th>Désignation</th>
                <th>Jours</th>
                <th>Date Paiement</th>
                <th>Montant payé</th>
                {# <th>Statut</th> #}
            </tr>
        </thead>
        <tbody>
            {% set totalPayee = 0 %}
            {% for jourrestant in tableauMois %}
                {% set debutLimite = jourrestant.debutLimite %}
                {% set datePaiement = "-" %}
                {% set designation = jourrestant.designation %}
                {% set montant = "-" %}
                {% set break = false %}
                {% set lenRepart = repartitions | length %}
                {% for repartition in repartitions %}
                    {% if lenRepart > 0 %}
                        {% if not break %}
                            {% if jourrestant.debutLimite == repartition.debutLimite %}
                                {% set montant = repartition.montant %}
                                {% set designation = repartition.designation %}
                                {% set datePaiement = repartition.datePaiement %}
                                {% set totalPayee = totalPayee + repartition.montant %}
                                {% set lenRepart = lenRepart - 1 %}
                                {% set break = true %}
                            {% endif %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
                <tr>
                    <td>{{ designation | upper }}</td>
                    <td>{{ jourrestant.debutLimite }}</td>
                    <td>{{ datePaiement }}</td>
                    <th>{{ montant }}</th>
                    {# <th>{{ repartition.statut | upper }}</th> #}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<table class="table-sm table table-bordered font-smaller">
    <tfoot>
        <tr>
            <th colspan="3" class="text-uppercase">Montant Total Payée</th>
            <th  class="text-white bg-primary" >{{ totalPayee }}</th>
        </tr>
    </tfoot>
</table>
<div class="w-100">
    Arrêté la présente facture à la somme de <span id="cmd_somme_lettre" class="font-weight-bold text-uppercase">{{ lettreReleve | upper}}</span>
</div>