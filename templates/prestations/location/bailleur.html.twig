 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/location.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-2">
        <form id="formBailleur">
            <h5 class="title_form text-black text-uppercase">Nouveau bailleur</h5>
            <div class="row">
                <div class="col-md-4">
                    <label for="prest_lct_prop_nom" class="font-weight-bold">Nom propriétaire</label>
                    <input type="text" name="prest_lct_prop_nom" oninput="this.value = this.value.toUpperCase();" id="prest_lct_prop_nom" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-2">
                    <label for="prest_lct_prop_tel" class="font-weight-bold">Téléphone</label>
                    <input type="text" name="prest_lct_prop_tel" id="prest_lct_prop_tel" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-3">
                    <label for="prest_lct_prop_adresse" class="font-weight-bold">Adresse</label>
                    <input type="text" name="prest_lct_prop_adresse" oninput="this.value = this.value.toUpperCase();" id="prest_lct_prop_adresse" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-3">
                    <label for="" class="font-weight-bold">&nbsp;</label>
                    <button type="submit" class="btn btn-block btn-sm btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                </div>
            </div>
        </form>
        <div class="barre_dashed w-100 py-3 mt-3 ">
            <h5 class="title_form text-black text-uppercase">Liste des bailleurs</h5>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nom propriétaire</th>
                            <th>Téléphone</th>
                            <th>Adresse</th>
                            <th></th>
                        </tr>
                    </thead>
                    {# Nursie Primerage #}
                    <tbody>
                        {% for bailleur in bailleurs %}
                            <tr>
                                <td>{{bailleur.nom}}</td>
                                <td>{{bailleur.telephone}}</td>
                                <td>{{bailleur.adresse}}</td>
                                <td class="text-center">
                                    <a href="{{path('prest_location_bailleur_detail',{'id':bailleur.id})}}" class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></a>
                                    <button data-value="{{bailleur.id}}" class="btn btn-sm prest_bailleur_suppr btn-outline-danger ml-1 font-smaller"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}


