 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/location.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row">
            <div class="col-md-3">
                <label for="location_com_search_numContrat" class="font-weight-bold text-uppercase">N° Contrat</label>
                <select name="location_com_search_numContrat" class="custom-select chosen_select custom-select-sm" id="location_com_search_numContrat">
                    <option value="">TOUS</option>
                    {% for contrat in contrats %}
                        <option value="{{contrat.id}}">{{contrat.numContrat}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="location_com_search_bail" class="font-weight-bold text-uppercase">Bail</label>
                <select name="location_com_search_bail" class="custom-select chosen_select custom-select-sm" id="location_com_search_bail">
                    <option value="">TOUS</option>
                    {% for bail in bails %}
                        <option value="{{bail.id}}">{{bail.nom|upper}} | {{bail.adresse|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="location_com_search_locataire" class="font-weight-bold text-uppercase">Locataire</label>
                <select name="location_com_search_locataire" class="custom-select chosen_select custom-select-sm" id="location_com_search_locataire">
                    <option value="">TOUS</option>
                    {% for locataire in locataires %}
                        <option value="{{locataire.id}}">{{locataire.nom|upper}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="table-responsive mt-4">
            <table class="table table-sm table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Numéro</th>
                        <th>Bail</th>
                        <th>Locataire</th>
                        <th>Cycle</th>
                        <th>Durée contrat</th>
                        <th>Date de paiement</th>
                        <th>Montant Commission</th>
                        {# <th></th> #}
                    </tr>
                </thead>
                <tbody class="elem_commission">
                {% set totalCommission = 0 %}
                    {% for contrat in contrats %}
                        <tr>
                            <td class="align-middle">{{contrat.numContrat}}</td>
                            <td class="align-middle">{{contrat.bail|upper}}</td>
                            <td class="align-middle">{{contrat.locataire|upper}}</td>
                            <td class="align-middle">{{contrat.cycle|upper}}</td>
                            <td class="align-middle">{{contrat.duree}}</td>
                            <td class="align-middle">{{contrat.datePaiement}}</td>
                            <td class="align-middle">{{contrat.commission}}</td>
                            {# <td class="text-center align-middle">
                                <div class="d-flex flex-column align-items-center justify-content-center p-2">
                                    <a href="{{path('prest_location_contrat_releve_loyer',{'id':contrat.id})}}" class="btn btn-sm btn-outline-info font-smaller"><i class="fa fa-file-invoice"></i></a>
                                    <a href="{{path('prest_location_contrat_detail',{'id':contrat.id})}}" class="btn btn-sm mt-2 btn-outline-warning font-smaller"><i class="fa fa-edit"></i></a>
                                </div>
                            </td> #}
                        </tr>
                        <tr>
                            <th colspan="12" class="p-1 bg-light"> </th>
                        </tr>
                        {% set totalCommission = totalCommission + contrat.commission  %}
                    {% endfor %}
                    <tr>
                        <th colspan="6" >Montant Total</th>
                        <th class="text-white bg-primary">{{totalCommission}}</th>
                    </tr>
                </tbody>
            </table>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


