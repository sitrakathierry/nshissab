
<h5 class="title_form text-black text-uppercase">Facture Prestation Location</h5>

<div class="row">
    <div class="col-md-3">
        <label for="nom" class="mt-2 font-weight-bold">Numéro du contrat</label>
        <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
    </div>
    <div class="col-md-3">
        <label for="nom" class="mt-2 font-weight-bold">Nom du bailleur</label>
        <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
    </div>
    <div class="col-md-3">
        <label for="nom" class="mt-2 font-weight-bold">Nom du bail</label>
        <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
    </div>
    <div class="col-md-3">
        <label for="nom" class="mt-2 font-weight-bold">Nom du Locataire</label>
        <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-3">
        <label for="nom" class="mt-2 font-weight-bold">Date de paiement</label>
        <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
    </div>
    <div class="col-md-3">
        <label for="nom" class="mt-2 font-weight-bold">Montant à payer</label>
        <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
    </div>
</div>
<div class="w-100 mt-2">
    <label for="nom" class="mt-2 font-weight-bold">Description</label>
    <textarea name="location_paiement_editor" class="form-control" id="location_paiement_editor" cols="30" rows="10"></textarea>
</div>
<div class="table-responsive mt-3">
    <table class="table-sm table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Désignation</th>
                <th>Date de paiement</th>
                <th>Mois</th>
                <th>Année</th>
                <th>Montant payé</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tbody>
    </table>
</div>

{% if with_foot %}
    <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
        <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
    </div>
{% endif %} 
<script>
    var location_paiement_editor = new LineEditor("#location_paiement_editor") ;
</script>
