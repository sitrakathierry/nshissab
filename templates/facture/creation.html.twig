 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row">
            <div class="col-md-6 pl-4 pr-5">
                <label for="modele" class="font-weight-bold text-uppercase">Mod√®le</label>
                <select name="modele" class="custom-select custom-select-sm" id="modele">
                    <option value="">AUCUN</option>
                </select>

                <label for="paiement" class="mt-3 font-weight-bold text-uppercase">Paiement</label>
                <select name="paiement" class="custom-select custom-select-sm" id="paiement">
                    <option value="">AUCUN</option>
                </select>
            </div>
            <div class="col-md-6 pl-3 pr-5">
                <label for="type" class="font-weight-bold text-uppercase">Type</label>
                <select name="type" class="custom-select custom-select-sm" id="type">
                    <option value="">AUCUN</option>
                </select>
                
                <label for="client" class="mt-3 font-weight-bold text-uppercase">Client</label>
                <select name="client" class="custom-select custom-select-sm" id="client">
                    <option value="">AUCUN</option>
                </select>
            </div>
        </div>
        <div class="w-100 px-2">
            <label for="nom" class="mt-3 font-weight-bold text-uppercase">Description</label>
            <textarea name="facture_editor" class="form-control facture_editor" id="" cols="10" rows="5"></textarea>
        </div>
        <div class="barre_dashed w-100 p-5 mt-4 border-bottom">
        
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_facture btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}
