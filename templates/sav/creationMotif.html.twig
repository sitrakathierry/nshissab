 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3 pb-3">
        <h5 class="title_form text-black text-uppercase">Cr√©ation Motif</h5>
        <form id="formMotif" >
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="sav_motif_nom" class="font-weight-bold">Nom</label>
                    <input type="text" name="sav_motif_nom" id="sav_motif_nom" oninput="this.value = this.value.toUpperCase();" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-3">
                    <label for="" class="font-weight-bold">&nbsp;</label>
                    <button type="submit" class="btn btn-sm btn-block btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                </div>
            </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                {# <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button> #}
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
        </form>
        <div class="w-100 barre_dashed">
            <h5 class="title_form mt-3 text-black text-uppercase">Liste des Motifs</h5>
        </div>
        {# <div class="row">
            <div class="col-md-3">
                <label for="rch_nom" class="font-weight-bold">Nom</label>
                <div class="input-group">
                    <input type="text" name="rch_nom" oninput="this.value = this.value.toUpperCase();" id="rch_nom" class="form-control" placeholder=". . .">
                    <div class="input-group-append">
                        <button class="btn btn-sm btn-outline-secondary vider font-smaller" type="button" onclick="document.querySelector('#rch_nom').value=''"><i class="fas fa-times"></i></button>
                    </div>
                </div>
            </div>
        </div> #}
        <div class="table-responsive limit_tbody overflow-auto mt-3">
            <table class="table table-bordered table-hover table-sm">
                <thead class="thead-light">
                    <tr>
                        <th>Nom</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="elem_motifs">
                    {% for motif in motifs %}
                        <tr>
                            <td>{{motif.nom}}</td>
                            <td class="text-center align-middle">
                                <button value="{{motif.id}}" class="btn btn-sm sav_btn_motif_update btn-outline-warning font-smaller"><i class="fa fa-edit"></i></button>
                                <button value="{{motif.id}}" class="btn ml-2 btn-sm sav_btn_motif_delete btn-outline-danger font-smaller" ><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}


