{% extends 'home.html.twig' %}

{% block title %}Controller{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/menu/css/style.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block menu %}
    <div class="wrapper d-flex align-items-stretch">
		<nav id="sidebar">
            <div class="profil w-100 text-center pt-4 pb-4" style="background:linear-gradient(0deg, #212121d0, #212121d0),url({{asset('data/images/header_image.png')}})">
                <img src="{{asset('data/images/profile.png')}}" alt="" class="profil_image img rounded-circle img-fluid">
                <h1 class="text-uppercase"><a href="{{path('refresh_all')}}" class="logo">{{app.session.get('user').username}}</a></h1>
                <a class="btn email_user text-white btn-link" data-toggle="collapse" href="#myprofile" role="button" aria-expanded="false" aria-controls="myprofile">
                    {{app.session.get('user').email}}
                </a>
                <div class="w-100 collapse" id="myprofile">
                     <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none"><i class="fa fa-user"></i>&nbsp;Profil</a></li>
                        <li><a href="{{path('app_logout')}}" class="text-white text-decoration-none"><i class="fa fa-sign-out"></i>&nbsp;Deconnexion</a></li>
                    </ul>
                </div>
            </div>
            <div id="menu_accordion">
                <div class="menu_accr">
                </div>
            </div>
		</nav>

		<!-- Page Content  -->
        {% if app.session.get("user")["role"] == "ADMIN" %}
            {% set darshboard = path("app_admin") %}
        {% else %}
            {% set darshboard = path("app_home") %}
        {% endif %}
		<div id="content">
            <nav class="navbar navbar-light bg-light">
                <div class="navbar-nav d-flex flex-wrap flex-row w-100 align-items-center">
                    <button type="button" id="sidebarCollapse" class="btn btn-sm btn-perso-one">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <a href="{{darshboard}}" type="button" class="btn ml-2 btn-sm btn-perso-one">
                        <i class="fa fa-th"></i>
                        &nbsp;Tableau de bord
                    </a>
                    <button class="btn-outline-warning btn btn-sm ml-3" onclick="history.back()" style="width: 120px;"><i class="fa fa-arrow-left"></i>&nbsp;Précédent</button>
                    <button class="btn-outline-warning btn btn-sm mx-2" onclick="history.forward()" style="width: 120px;"><i class="fa fa-arrow-right"></i>&nbsp;Suivant</button>
                    <a class="nav-item nav-link ml-md-auto pr-5" href="#">
                        <img src="{{asset('data/images/logo_header.png')}}" class="logo_header img-fluid img">
                    </a>
                    <a class="nav-item nav-link pr-3" href="#"><i class="fa fa-bell"></i><span class="badge badge-danger text-white float-right">23</span></a>
                    <a class="nav-item nav-link" href="{{path('app_logout')}}"><i class="fa fa-sign-out"></i>&nbsp;Déconnexion</a>
                </div>
            </nav>
            <article class="py-4 px-2">
                <div class="container-fluid">
                    {% block body %}{% endblock %}
                </div>
            </article> 
		</div>
	</div>
{% endblock %}

