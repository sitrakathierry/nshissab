 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <h5 class="title_form text-black text-uppercase">Ajout fournisseur</h5>
        <div class="row">
            <div class="col-md-6 px-4">
                <label for="nom" class="font-weight-bold">Nom</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="mt-1 font-weight-bold">Tel bureau</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="mt-1 font-weight-bold">Adresse</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-6 px-4">
                <label for="nom" class="font-weight-bold">Nom Contact</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="mt-1 font-weight-bold">Tel Mobile</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="mt-1 font-weight-bold">Email</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
        <div class="w-100 barre_dashed">
            <h5 class="title_form mt-4 mb-3 text-black text-uppercase">Liste des fournisseurs</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-sm">
                <thead class="thead-light">
                    <tr>
                        <th>Nom</th>
                        <th>Nom Contact</th>
                        <th>Tel Bureau</th>
                        <th>Tel Mobile</th>
                        <th>Adresse</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td class="text-center"><a href="#"><i class="fa fa-edit"></i></a>&emsp;<a href="#"><i class="fa fa-trash"></i></a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
