<div class="pt-2 table-responsive overflow-auto" style="max-height: 420px;">
    <table class="table table-sm font-smaller table-bordered mb-0" >
        <thead class="thead-light">
            <tr>
                {# <th>N°</th> #}
                <th>Entrepôt</th>
                <th>Code Produit</th>
                <th>Catégorie</th>
                <th>Nom Produit</th>
                <th>Désignation</th>
                <th>Indice</th>
                <th class="text-right">Prix Achat</th>
                <th class="text-right">Charge</th>
                <th class="text-right">Marge</th>
                <th class="text-right">Prix Vente</th>
                <th class="text-right">Stock</th>
                <th class="text-right">Total Charge</th>
                <th class="text-right">Total Marge</th>
                <th class="text-right">Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% set total = 0 %}
            {% set totalGeneral = 0 %}
            {% set totalStock = 0 %}
            {% set totalCharge = 0 %}
            {% set totalMarge = 0 %}
            {# {% set index = 1 %} #}
            {% for stockEntrepot in stockEntrepots %}
                {% set total = stockEntrepot.prixVente * stockEntrepot.stock %}
                {% set chargeT = stockEntrepot.charge * stockEntrepot.stock %} 
                {% set prixRevient = stockEntrepot.charge + stockEntrepot.prixAchat %} 
                {% if stockEntrepot.margeRef != "COEFF" %}
                    {% set margeT = stockEntrepot.margeVal * stockEntrepot.stock %}
                {% else %}
                    {% set margeT = (stockEntrepot.prixVente / prixRevient) * stockEntrepot.stock %} 
                {% endif %}
                <tr>
                    {# <td>{{index}}</td> #}
                    <td class="align-middle">{{stockEntrepot.entrepot}}</td>
                    <td class="align-middle">{{stockEntrepot.codeProduit}}</td>
                    <td class="align-middle">{{stockEntrepot.categorie|upper}}</td>
                    <td class="align-middle">{{stockEntrepot.nomType}}</td>
                    <td class="align-middle">{{stockEntrepot.nom}}</td>
                    <td class="align-middle">{{stockEntrepot.indice}}</td>
                    <td class="align-middle text-right">{{stockEntrepot.prixAchat|format_number}}</td>
                    <td class="align-middle text-right">{{stockEntrepot.charge|format_number}}</td>
                    <td class="align-middle text-right">{{stockEntrepot.marge}}</td>
                    <td class="align-middle text-right">{{stockEntrepot.prixVente|format_number}}</td>
                    <td class="align-middle text-right">{{stockEntrepot.stock|format_number}}</td>
                    <td class="align-middle text-right" style="width: 100px !important;">{{chargeT|format_number}}</td>
                    <td class="align-middle text-right" style="width: 100px !important;">{{margeT|format_number}}</td>
                    <td class="align-middle text-right" style="width: 100px !important;">{{total|format_number}}</td>
                    <td class="text-center align-middle" > 
                        <button type="button" data-value="{{stockEntrepot.id}}" data-init='<i class="fa fa-square"></i>' data-check='<i class="fa fa-check"></i>' class="btn btn-sm check_export btn-outline-success font-smaller"><i class="fa fa-square"></i></button>
                    </td>
                </tr>
                {% set totalCharge = totalCharge + chargeT %}
                {% set totalMarge = totalMarge + margeT %}
                {% set totalStock = totalStock + stockEntrepot.stock %}
                {% set totalGeneral = totalGeneral + total %}
                {# {% set index = index + 1 %} #}
            {% endfor %}
        </tbody>
    </table>
</div>
<table class="table table-sm font-smaller table-bordered">
    <tr>
        <th >Total Charge</th>
        <th class="bg-dark text-white text-right" style="width: 120px !important;">{{totalCharge|format_number}}</th>
        <th class="bg-dark text-white text-right" style="width: 55px !important;"></th>
    </tr>
    <tr>
        <th >Total Marge</th>
        <th class="bg-primary text-white text-right" style="width: 120px !important;">{{totalMarge|format_number}}</th>
        <th class="bg-primary text-white text-right" style="width: 55px !important;"></th>
    </tr>
    <tr>
        <th >Total Général</th>
        <th class="bg-success text-white text-right" style="width: 120px !important;">{{totalGeneral|format_number}}</th>
        <th class="bg-success text-white text-right" style="width: 55px !important;"></th>
    </tr>
</table>