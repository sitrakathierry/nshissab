<div class="w-100 pb-3">
    <form id="formTransfert">
        <h5 class="title_form text-black mt-3 text-uppercase">Transfert de Produit sans quantité</h5>
        <div class="row mt-3">
            <div class="col-md-4">
                <label for="trans_entrepot_source" class="font-weight-bold">Entrepôt Source</label>
                <select name="trans_entrepot_source" class="custom-select chosen_select custom-select-sm" id="trans_entrepot_source">
                    <option value=""></option>
                    {% for entrepot in entrepots %}
                        <option value="{{entrepot.id}}">{{entrepot.nom|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-4">
                <label for="trans_entrepot_dest" class="font-weight-bold">Entrepôt Destination</label>
                <select name="trans_entrepot_dest" class="custom-select chosen_select custom-select-sm" id="trans_entrepot_dest">
                    <option value=""></option>
                    {% for entrepot in entrepots %}
                        <option value="{{entrepot.id}}">{{entrepot.nom|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-2">
                <label for="" class="font-weight-bold">&nbsp;</label>
                <button type="submit" class="btn btn-warning btn-sm btn-block trans_entrepot_valider"><i class="fa fa-save"></i>&nbsp;Valider</button>
            </div>
            <div class="col-md-2">
                <label for="" class="font-weight-bold">&nbsp;</label>
                <button type="button" onclick="location.reload()" class="btn btn-dark btn-sm btn-block "><i class="fa fa-times"></i>&nbsp;Annuler</button>
            </div>
        </div>
    </form>
</div>
<script>
    $(".chosen_select").chosen({
        no_results_text: "Aucun resultat trouvé : "
    });
</script>