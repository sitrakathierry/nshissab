<h5 class="title_form text-black text-uppercase">Modification fournisseur</h5>
<form id="formUpdateFournisseur">
    <div class="row">
        <div class="col-md-6 px-4">
            <label for="frns_nom" class="font-weight-bold">Nom</label>
            <input type="text" name="frns_nom" id="frns_nom" class="form-control" value="{{fournisseur.nom}}">
            <input type="hidden" name="frns_id" id="frns_id" value="{{fournisseur.id}}">

            <label for="frns_tel_bureau" class="mt-1 font-weight-bold">Tel bureau</label>
            <input type="text" name="frns_tel_bureau" id="frns_tel_bureau" class="form-control" value="{{fournisseur.telBureau}}">

            <label for="frns_adresse" class="mt-1 font-weight-bold">Adresse</label>
            <input type="text" name="frns_adresse" id="frns_adresse" class="form-control" value="{{fournisseur.adresse}}">
        </div>
        <div class="col-md-6 px-4">
            <label for="frns_nom_contact" class="font-weight-bold">Nom Contact</label>
            <input type="text" name="frns_nom_contact" id="frns_nom_contact" class="form-control" value="{{fournisseur.nomContact}}">

            <label for="frns_tel_mobile" class="mt-1 font-weight-bold">Tel Mobile</label>
            <input type="text" name="frns_tel_mobile" id="frns_tel_mobile" class="form-control" value="{{fournisseur.telMobile}}">

            <label for="frns_email" class="mt-1 font-weight-bold">Email</label>
            <input type="email" name="frns_email" id="frns_email" class="form-control" value="{{fournisseur.email}}">
        </div>
    </div>
    <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
        {# <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button> #}
        <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-database"></i>&nbsp;Mettre Ã  jour</button>
    </div>
</form>