{% if specHisto == 'EXP' %}
    <h5 class="title_form text-black text-uppercase text-center">Produit Expirée</h5>
    <div class="table-responsive limit_tbody overflow-auto mt-4">
        <table class="table table-sm table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Date d'expiration</th>
                    <th>Nom Produit</th>
                    <th>Désignation Produit</th>
                    <th>Code</th>
                    <th>Indice</th>
                    <th>Quantité</th>
                </tr>
            </thead>
            <tbody>
                {% for stockExpiree in produitExpirees %}
                    <tr>
                        <td>{{stockExpiree.dateExpiration}}</td>
                        <td>{{stockExpiree.nomType|upper}}</td>
                        <td>{{stockExpiree.nomProduit}}</td>
                        <td>{{stockExpiree.codeProduit}}</td>
                        <td>{{stockExpiree.indice}}</td>
                        <td>{{stockExpiree.stock}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <h5 class="title_form text-black text-uppercase text-center">Produit Déduit</h5>
    <div class="table-responsive limit_tbody overflow-auto mt-2">
        <table class="table table-sm table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Date de déduction</th>
                    <th>Entrepot</th>
                    <th>Nom Produit</th>
                    <th>Désignation Produit</th>
                    <th>Code</th>
                    <th>Indice</th>
                    <th>Quantité Déduit</th>
                </tr>
            </thead>
            <tbody>
                {% for produitDeduit in produitDeduits %}
                    <tr>
                        <td class="align-middle">{{produitDeduit.date}}</td>
                        <td class="align-middle">{{produitDeduit.entrepot}}</td>
                        <td class="align-middle">{{produitDeduit.nomProduit}}</td>
                        <td class="align-middle">{{produitDeduit.designation}}</td>
                        <td class="align-middle">{{produitDeduit.codeProduit}}</td>
                        <td class="align-middle">{{produitDeduit.indice}}</td>
                        <td class="align-middle">{{produitDeduit.quantite}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}