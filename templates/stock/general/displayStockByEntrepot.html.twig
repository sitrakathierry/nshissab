<div class="table-responsive">
    <table class="table table-sm table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Entrep√¥t</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% set total = 0 %}
            {% for stockGEntrepot in stockGEntrepots %}
                <tr>
                    <td class="align-middle">{{stockGEntrepot.nom|upper}}</td>
                    <td class="align-middle">{{stockGEntrepot.stock}}</td>
                    <td class="text-center align-middle">
                    <a href="{{path('stock_stockentrepot',{'id': stockGEntrepot.encodedId })}}" class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></a>
                    </td>
                    {% set total = total + stockGEntrepot.stock %}
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <th colspan="2" class="bg-info text-white">{{total}}</th>
            </tr>
        </tfoot>
    </table>
</div>