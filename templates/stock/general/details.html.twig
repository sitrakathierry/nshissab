 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/impression.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 py-3">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link font-smaller text-uppercase font-weight-bold active" id="pills-home-tab" data-toggle="pill" data-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Details</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link font-smaller text-uppercase font-weight-bold" id="pills-profile-tab" data-toggle="pill" data-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Variation de Produit</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link font-smaller text-uppercase font-weight-bold" id="pills-contact-tab" data-toggle="pill" data-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Achats et Ventes</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link font-smaller text-uppercase font-weight-bold" id="pills-actuality-tab" data-toggle="pill" data-target="#pills-actuality" type="button" role="tab" aria-controls="pills-actuality" aria-selected="false">Statistiques</button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                {# Details #}
                <div class="row">
                    <div class="col-md-6 px-5">
                        <label for="prod_categorie" class="mt-2 font-weight-bold">Catégories</label>
                        <select name="prod_categorie" class="custom-select custom-select-sm" id="prod_categorie">
                            {% for categorie in categories %}
                                <option value="{{categorie.id}}">{{categorie.nom|upper}}</option>
                            {% endfor %}
                        </select>

                        <label for="code_produit" class="mt-3 font-weight-bold">Code</label>
                        <div id="contentScanner" class="w-100">
                            <div class="row">
                                <div class="col-md-12">
                                    {# <input type="number" name="code_produit" id="code_produit" class="form-control code_produit" placeholder=". . ."> #}
                                    <input type="text" name="code_produit" oninput="this.value = this.value.toUpperCase();" id="code_produit" class="form-control code_produit" placeholder=". . .">
                                </div>
                                {# <div class="col-md-5">
                                    <button type="button" class="btn btn-sm btn-success btn-block" id="stock_generer_code_scan"><i class="fa fa-qrcode"></i>&nbsp;<i class="fa fa-barcode"></i>&nbsp;Générer</button>
                                </div> #}
                            </div>
                        </div>
                        <input type="hidden" name="qr_code_produit" value="exemple" class="qr_code_produit">
                        <input type="hidden" name="barcode_produit" value="exemple" class="barcode_produit">

                        <label for="prod_nom" class="mt-2 font-weight-bold">Nom</label>
                        <input type="text" name="prod_nom" oninput="this.value = this.value.toUpperCase();" id="prod_nom" class="form-control" placeholder=". . .">
                        
                        <div class="row">
                            <div class="col-md-6">
                                <label for="unite_produit" class="mt-2 unite_produitunite_produit font-weight-bold">Stock Disponible</label>
                                <input type="text" readonly name="unite_produit" id="unite_produit" class="form-control" placeholder=". . .">
                            </div>
                            <div class="col-md-6">
                                <label for="unite_produit" class="mt-2 unite_produitunite_produit font-weight-bold">Unité</label>
                                <input type="text" name="unite_produit" id="unite_produit" class="form-control" placeholder=". . .">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 px-5">
                        <div class="qr_block mt-2 w-100 d-flex flex-row align-items-center justify-content-center">
                        </div>
                        <div id="mybarCode" class="mt-5 mybarCode mx-auto overflow-auto"></div>
                        <div class="mt-2 w-100 text-center">
                            {# <button type="button" class="btn btn-sm btn-outline-info" id="stock_print_barcode"><i class="fa fa-print"></i>&nbsp;<i class="fa fa-barcode"></i>&nbsp;Imprimer</button> #}
                            <button type="button" class="btn btn-sm btn-outline-purple" id="stock_print_barcode"><i class="fa fa-download"></i>&nbsp;Télécharger</button>
                        </div>
                    </div>
                </div>
                <div class="w-100 mt-3 px-4">
                    <label for="produit_editor" class="mt-2 font-weight-bold text-uppercase">Description</label>
                    <textarea name="produit_editor" class="form-control produit_editor" id="produit_editor" cols="10" rows="5"></textarea>
                </div>
                {% if with_foot %}
                    <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                        <button type="submit" class="btn btn-sm ml-3 btn-danger"><i class="fa fa-trash"></i>&nbsp;Supprimer</button>
                        <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Mettre à jour</button>
                    </div>
                {% endif %} 
                {# Fin Details #}
            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                {# Variation de Produit #}
                <div class="container">
                    <h5 class="title_form text-black text-uppercase">Création variation de produit</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="nom" class="font-weight-bold">Entrepot</label>
                            <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                        </div>
                        <div class="col-md-3">
                            <label for="nom" class="font-weight-bold">Code</label>
                            <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                        </div>
                        <div class="col-md-2">
                            <label for="nom" class="font-weight-bold">Indice</label>
                            <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                        </div>
                        <div class="col-md-3">
                            <label for="nom" class="font-weight-bold">Prix de vente</label>
                            <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                        </div>
                        <div class="col-md-2">
                            <label for="nom" class="mt-3 font-weight-bold">Stock</label>
                            <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                        </div>
                        <div class="col-md-5">
                            <label for="nom" class="mt-3 font-weight-bold">Mettre à jour le stock du produit générale</label>
                            <div class="row">
                                <div class="col-md-4">
                                    <button class="btn btn-sm btn-outline-dark btn-block"><i class="fa fa-times"></i>&nbsp;NON</button>
                                </div>
                                <div class="col-md-4">
                                    <button class="btn btn-sm btn-outline-success btn-block"><i class="fa fa-check"></i>&nbsp;OUI</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="w-100 barre_dashed mt-3 p-3 text-right">
                        <button class="btn btn-sm btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                    </div>
                    <div class="barre_dashed pt-3">
                        <h5 class="title_form text-black text-uppercase">Liste des variations de produit</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Entrepôt</th>
                                        <th>Code</th>
                                        <th>Prix de Vente</th>
                                        <th>Stock</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td class="text-center align-middle">
                                            <button class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></button>
                                            <button class="btn btn-sm btn-outline-danger ml-1 font-smaller"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {# Fin Variation de Produit #}
            </div>
            <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                {# Achats et Ventes #}
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Date</th>
                                <th>Entrepôt</th>
                                <th>Produit</th>
                                <th>Qte</th>
                                <th>Prix Unitaire</th>
                                <th>Total</th>
                                <th class="text-center align-middle">Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td class="text-center align-middle">-</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                {# Fin Achats et Ventes #}
            </div>
            <div class="tab-pane fade" id="pills-actuality" role="tabpanel" aria-labelledby="pills-actuality-tab">
                {# Statistiques #}
                {# Fin Statistiques #}
            </div>
        </div>
    </div>
</div>
{% endblock %}


