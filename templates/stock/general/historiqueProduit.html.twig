 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row">
            <div class="col-md-3">
                <label for="produit_search_histo" class="mt-2 font-weight-bold text-uppercase">Produit Expirée / Déduit</label>
                <select name="produit_search_histo" class="custom-select chosen_select custom-select-sm" id="produit_search_histo">
                    <option value="DDI">{{"Produit Déduit"|upper}}</option>
                    <option value="EXP">{{"Produit Expirée"|upper}}</option>
                </select>
            </div>
        </div>
        <div class="content_historique py-4">
            <h5 class="title_form text-black text-uppercase text-center">Produit Déduit</h5>
            <div class="table-responsive limit_tbody overflow-auto mt-2">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Date de déduction</th>
                            <th>Entrepot</th>
                            <th>Nom Produit</th>
                            <th>Désignation Produit</th>
                            <th>Code</th>
                            <th>Indice</th>
                            <th>Quantité Déduit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produitDeduit in produitDeduits %}
                            <tr>
                                <td class="align-middle">{{produitDeduit.date}}</td>
                                <td class="align-middle">{{produitDeduit.entrepot}}</td>
                                <td class="align-middle">{{produitDeduit.nomProduit}}</td>
                                <td class="align-middle">{{produitDeduit.designation}}</td>
                                <td class="align-middle">{{produitDeduit.codeProduit}}</td>
                                <td class="align-middle">{{produitDeduit.indice}}</td>
                                <td class="align-middle">{{produitDeduit.quantite}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


