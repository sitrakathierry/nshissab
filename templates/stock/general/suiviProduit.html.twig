
<h5 class="title_form text-black text-uppercase text-center mt-4">Produit : <span class="text-success">{{nomProduit}}</span></h5>
{% if formulaire != "DEPOT" %}
<div class="table-responsive mt-3">
    <table class="table-sm table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Entrepot</th>
                <th>Type</th>
                <th>Indice</th>
                <th>Quantité</th>
                <th>Prix d'Achat</th>
                <th>Charge</th>
                <th>Marge</th>
                <th>Prix de vente</th>
            </tr>
        </thead>
        <tbody>
            {% set totalCredit = 0 %}
            {% set totalDebit = 0 %}
            {% set totalQte = 0 %}
            {% for suiviProduit in suiviProduits %}
                <tr>
                    <td class="align-middle">{{suiviProduit.date}}</td>
                    <td class="align-middle">{{suiviProduit.entrepot|upper}}</td>
                    <td class="align-middle">{{suiviProduit.type|upper}}</td>
                    <td class="align-middle">{{suiviProduit.indiceP}}</td>
                    <td class="align-middle">{{suiviProduit.quantite}}</td>
                    <td class="align-middle">{{suiviProduit.prixAchat}}</td>
                    <td class="align-middle">{{suiviProduit.charge}}</td>
                    <td class="align-middle">{{suiviProduit.marge}}</td>
                    <td class="align-middle">{{suiviProduit.prix}}</td>
                </tr>
                {% set totalQte = totalQte + suiviProduit.quantite %}
            {% endfor %}
            <tfoot>
                <tr> 
                    <th colspan="4">Total</th>
                    <th colspan="5">{{totalQte}}</th>
                </tr>
            </tfoot>
        </tbody>
    </table>
</div>
{% else %}
<div class="table-responsive mt-4">
    <table class="table-sm table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Entrepot Source</th>
                <th>Entrepot Destination</th>
                <th>Indice</th>
                <th>Quantité</th>
                <th>Prix Achat</th>
                <th>Charge</th>
                <th>Marge</th>
                <th>Prix Vente</th> 
            </tr>
        </thead>
        <tbody>
            {% set totalCredit = 0 %}
            {% set totalDebit = 0 %}
            {% set totalQte = 0 %}
            {% for suiviProduit in suiviProduits %}
                <tr>
                    <td class="align-middle">{{suiviProduit.date}}</td>
                    <td class="align-middle">{{suiviProduit.type|upper}}</td>
                    <td class="align-middle">{{suiviProduit.entrpSource|upper}}</td>
                    <td class="align-middle">{{suiviProduit.entrpDest|upper}}</td>
                    <td class="align-middle">{{suiviProduit.indiceP}}</td>
                    <td class="align-middle">{{suiviProduit.quantite}}</td>
                    <td class="align-middle">{{suiviProduit.prixAchat}}</td>
                    <td class="align-middle">{{suiviProduit.charge}}</td>
                    <td class="align-middle">{{suiviProduit.marge}}</td>
                    <td class="align-middle">{{suiviProduit.prix}}</td>
                </tr>
                {% set totalQte = totalQte + suiviProduit.quantite %}
            {% endfor %}
            <tr> 
                <th colspan="5">Total</th>
                <th colspan="5">{{totalQte}}</th>
            </tr>
        </tbody>
    </table>
</div>
{% endif %}
