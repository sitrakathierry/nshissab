<div class="table-responsive">
    <table class="table table-sm table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Nom du produit</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% set total = 0 %}
            {% for key, item in stockGenerales %}
                <tr>
                    <td class="align-middle">{{key|upper}}</td>
                    <td class="align-middle">{{ item.stock }}</td>
                    <td class="text-center align-middle">
                    <a href="{{path('stock_general_par_type',{'type': item.encodedId })}}" class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></a>
                    </td>
                    {% set total = total + item.stock %}
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <th colspan="2" class="bg-primary text-white">{{total}}</th>
            </tr>
        </tfoot>
    </table>
</div>