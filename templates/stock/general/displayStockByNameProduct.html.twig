<div class="table-responsive limit_tbody overflow-auto">
    <table class="table table-sm table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Catégorie</th>
                <th>Nom Produit</th>
                <th>Code Produit</th>
                <th>Désignation</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for stockGenerale in stockGenerales %}
                <tr>
                    <td class="align-middle">{{stockGenerale.categorie|upper}}</td>
                    <td class="align-middle">{{stockGenerale.nomType|upper}}</td>
                    <td class="align-middle">{{stockGenerale.codeProduit}}</td>
                    <td class="align-middle">{{ stockGenerale.nom|upper}}</td>
                    <td class="align-middle">{{ stockGenerale.stock }}</td>
                    <td class="text-center align-middle">
                    <a href="{{path('stock_general_details',{'id':stockGenerale.encodedId})}}" class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>