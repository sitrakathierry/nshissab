 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <h5 class="title_form text-black text-uppercase">Choix des catégories</h5>
        <div class="row">
            <div class="col-md-6">
                <label for="nom" class="font-weight-bold">Catégories</label>
                <select name="categories[]" id="list_preferences" multiple class="custom-select">
                    {% for categorie in categories %}
                        <option value="{{categorie.id}}">{{categorie.nom|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-2">
                <label for="nom" class="font-weight-bold">&nbsp;</label>
                <button class="btn btn-primary btn-sm btn-block ajout_pref"><i class="fa fa-plus"></i>&nbsp;Ajouter</button>
            </div>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 

        <h5 class="title_form text-black text-uppercase mt-3 pt-3 barre_dashed">Liste des préférences</h5>
        <div class="row">
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th>Préférences</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="content_prefs">
                            {% for preference in preferences %}
                                <tr value="{{preference.id}}">
                                    <td>{{preference.nom | upper}}</td>
                                    <td class="text-center"><button class="btn delete_prefs btn-sm btn-outline-danger font-smaller"><i class="fa fa-times"></i></button></td>
                                </tr>
                            {% endfor %} 
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
