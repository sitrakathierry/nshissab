 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-2">
        <form id="formMateriel">
            <div class="px-3">
                <div class="row">
                    <div class="col-md-4">
                        <label for="int_materiel_nom" class="mt-2 font-weight-bold">Nom</label>
                        <input type="text" name="int_materiel_nom" id="int_materiel_nom" oninput="this.value = this.value.toUpperCase();" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="int_materiel_prix_achat" class="mt-2 font-weight-bold">Prix d'achat</label>
                        <input type="number" step="any" name="int_materiel_prix_achat" id="int_materiel_prix_achat" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="int_materiel_quantite" class="mt-2 font-weight-bold">Quantité</label>
                        <input type="number" step="any" name="int_materiel_quantite" id="int_materiel_quantite" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-2">
                        <label for="int_materiel_unite" class="mt-2 font-weight-bold">Unité</label>
                        <input type="text" name="int_materiel_unite" id="int_materiel_unite" class="form-control" placeholder=". . .">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label for="int_materiel_stock" class="mt-3 font-weight-bold">Produit en stock</label>
                        <input type="number" step="any" name="int_materiel_stock" id="int_materiel_stock" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-4">
                        <label for="int_materiel_libelle" class="mt-3 font-weight-bold">Libellé</label>
                        <div id="contentLibelle">
                            <div class="row">
                                <div class="col-md-9">
                                    <input type="text" name="int_materiel_libelle" id="int_materiel_libelle" oninput="this.value = this.value.toUpperCase();" class="form-control" placeholder=". . .">
                                </div>
                                <div class="col-md-3">
                                    <input type="hidden" name="int_materiel_add_libelle" value="OUI">
                                    <button type="button" class="btn btn-sm btn-purple int_existing_libelle btn-block"><i class="fa fa-layer-group"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="int_materiel_fournisseur" class="mt-3 font-weight-bold">Fournisseur</label>
                        <select name="int_materiel_fournisseur[]" class="custom-select custom-select-sm chosen_select" multiple id="int_materiel_fournisseur">
                            {% for fournisseur in fournisseurs %}
                                <option value="{{fournisseur.id}}">{{fournisseur.nom | upper}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    {# <div class="col-md-2">
                        <label for="int_materiel_total" class="mt-3 font-weight-bold">Total</label>
                        <input type="text" readonly name="int_materiel_total" id="int_materiel_total" class="form-control" placeholder=". . .">
                    </div> #}
                </div>
                <div class="w-100 mt-2">
                    <label for="stock_int_materiel_editor" class="mt-2 font-weight-bold text-uppercase">Description</label>
                    <textarea name="stock_int_materiel_editor" class="form-control stock_int_materiel_editor" id="stock_int_materiel_editor" cols="10" rows="5"></textarea>
                </div>
            </div>
            {% if with_foot %}
                <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                    <button type="submit" class="btn ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                </div>
            {% endif %} 
        </form>

    </div>
</div>
{% endblock %}


