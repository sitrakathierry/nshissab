 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/impression.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/creation.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/detailStock.js')}}" ></script>
{% endblock %}
{% block body %}
{% set image = asset('data/images/building.png') %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-5 pt-3">
    <form id="formCreateProduit">
        <div class="row">
            <div class="col-md-6 px-5">
                <div class="w-100 p-4 d-flex align-items center justify-content-center">
                    <img src="{{image}}" class="img image_categorie img-thumbnail img-fluid" alt="">
                </div>
                <button type="button" class="btn btn-info btn-sm btn-block importImage">Importer une image . . .</button>
                <input type="file" name="image" id="imageImport" class="form-control d-none" placeholder=". . .">
                <input type="hidden" name="prod_image" id="prod_image">
            </div>
            <div class="col-md-6 px-5">
                <div class="qr_block mt-2 w-100 d-flex flex-row align-items-center justify-content-center">
                </div>
                <div id="mybarCode" class="mt-5 mybarCode mx-auto overflow-auto"></div>
                <div class="mt-2 w-100 text-center">
                    {# <button type="button" class="btn btn-sm btn-outline-info" id="stock_print_barcode"><i class="fa fa-print"></i>&nbsp;<i class="fa fa-barcode"></i>&nbsp;Imprimer</button> #}
                    <button type="button" class="btn btn-sm btn-outline-purple" id="stock_print_barcode"><i class="fa fa-download"></i>&nbsp;Télécharger</button>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3">
                <label for="prod_categorie" class="mt-2 font-weight-bold">Catégories</label>
                <select name="prod_categorie" class="custom-select custom-select-sm" id="prod_categorie">
                    <option value="">-</option>
                    {% for categorie in categories %}
                        <option value="{{categorie.id}}">{{categorie.nom|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-6">
                <label for="code_produit" class="mt-2 font-weight-bold">Code</label>
                <div id="contentScanner" class="w-100">
                    <div class="row">
                        <div class="col-md-7">
                            {# <input type="number" name="code_produit" id="code_produit" class="form-control code_produit" placeholder=". . ."> #}
                            <input type="text" name="code_produit" oninput="this.value = this.value.toUpperCase();" id="code_produit" class="form-control code_produit" placeholder=". . .">
                        </div>
                        <div class="col-md-5">
                            <button type="button" class="btn btn-sm btn-success btn-block" id="stock_generer_code_scan"><i class="fa fa-qrcode"></i>&nbsp;<i class="fa fa-barcode"></i>&nbsp;Générer</button>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="qr_code_produit" value="exemple" class="qr_code_produit">
                <input type="hidden" name="barcode_produit" value="exemple" class="barcode_produit">
            </div>
            <div class="col-md-3">
                <label for="unite_produit" class="mt-2 unite_produitunite_produit font-weight-bold">Unité</label>
                <input type="text" name="unite_produit" id="unite_produit" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-6">
                <label for="prod_nom" class="mt-3 font-weight-bold">Nom du Produit</label>
                <div class="contenPrdType">
                    <div class="row">
                        <div class="col-md-9">
                            <input type="text" name="prod_type" oninput="this.value = this.value.toUpperCase();" id="prod_type" class="form-control" placeholder=". . .">
                            <input type="hidden" name="add_new_type" id="add_new_type" class="form-control" value="OUI">
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-sm prd_existing_type btn-purple btn-block"><i class="fa fa-layer-group"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <label for="prod_nom" class="mt-3 font-weight-bold">Designation du Produit</label>
                <div class="contentPrdDesignation">
                    <div class="row">
                        <div class="col-md-9">
                            <input type="text" name="prod_nom" oninput="this.value = this.value.toUpperCase();" id="prod_nom" class="form-control" placeholder=". . .">
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-sm prd_existing_designation btn-purple btn-block"><i class="fa fa-layer-group"></i></button>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="w-100 mt-3">
            <label for="produit_editor" class="mt-2 font-weight-bold text-uppercase">Description</label>
            <textarea name="produit_editor" class="form-control produit_editor" id="produit_editor" cols="10" rows="5"></textarea>
        </div> 
        <div class="mt-5 all_product w-100">
            <h5 class="title_form crt_title_form text-black mt-2 mb-3 text-uppercase">Variation produit : Entrepot, Indice, Prix <span class="caption_compteur">(1)</span></h5>
            <div class="content_product container-fluid rounded w-100 px-4 py-3 shadow">
                <div class="row">
                    <div class="col-md-3">
                        <label for="crt_code" class="font-weight-bold">Code</label>
                        <input type="text" name="crt_code[]" id="crt_code" class="form-control crt_code" readonly placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="crt_indice" class="font-weight-bold">Indice</label>
                        <input type="text" name="crt_indice[]"  oninput="this.value = this.value.toUpperCase();" id="crt_indice" class="form-control crt_indice" placeholder=". . .">
                    </div>
                    <div class="col-md-5">
                        <label for="crt_entrepot" class=" font-weight-bold">Entrepot</label>
                        <select name="crt_entrepot[]" class="custom-select crt_entrepot" id="crt_entrepot">
                            <option value="">AUCUN</option>
                            {% for entrepot in entrepots %}
                                <option value="{{entrepot.id}}">{{entrepot.nom}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-1 text-right">
                        <button type="button" class="btn btn-outline-danger annule_product btn-sm"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <label for="crt_fournisseur" class="mt-2 font-weight-bold">Fournisseur</label>
                        <select name="crt_fournisseur[][]" class="custom-select crt_fournisseur" multiple id="crt_fournisseur">
                            {% for fournisseur in fournisseurs %}
                                <option value="{{fournisseur.id}}">{{fournisseur.nom | upper}}</option>
                            {% endfor %}
                        </select>
                        <input type="hidden" name="crt_count_fournisseur[]" value="0" class="crt_count_fournisseur" >
                    </div>
                    <div class="col-md-4">
                        <label for="crt_prix_achat" class="mt-2 font-weight-bold">Prix Achat</label>
                        <input type="number" name="crt_prix_achat[]" id="crt_prix_achat" class="form-control crt_prix_achat" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="crt_charge" class="mt-2 font-weight-bold">Charge</label>
                        <input type="number" name="crt_charge[]" id="crt_charge" class="form-control crt_charge" placeholder=". . .">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label for="crt_prix_revient" class="mt-2 font-weight-bold">Prix de revient</label>
                        <input type="number" name="crt_prix_revient[]" readonly id="crt_prix_revient" class="form-control crt_prix_revient" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="crt_calcul" class="mt-2 font-weight-bold">Calcul Marge</label>
                        <select name="crt_calcul[]" class="custom-select crt_calcul" id="crt_calcul">
                            {% for marge_type in marge_types %}
                                <option value="{{marge_type.id}}">{{marge_type.notation | upper}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="crt_marge" class="mt-2 font-weight-bold">Marge</label>
                        <input type="number" name="crt_marge[]" id="crt_marge" class="form-control crt_marge" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="crt_stock" class="mt-2 font-weight-bold">Stock</label>
                        <input type="number" name="crt_stock[]" id="crt_stock" class="form-control crt_stock" placeholder=". . .">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label for="crt_stock_alert" class="mt-2 font-weight-bold">Stock Alerte</label>
                        <input type="number" name="crt_stock_alert[]" id="crt_stock_alert" class="form-control crt_stock_alert" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="crt_prix_vente" class="mt-2 font-weight-bold">Prix Vente</label>
                        <input type="number" name="crt_prix_vente[]" readonly id="crt_prix_vente" class="form-control crt_prix_vente" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="crt_expiree_le" class="mt-2 font-weight-bold">Expirée le</label>
                        <input type="text" name="crt_expiree_le[]" id="crt_expiree_le" class="form-control crt_expiree_le" placeholder=". . .">
                    </div>
                </div>
            </div>
        </div>
        <div class="w-100 mt-3 text-right action_global_product">
            <button type="button" class="btn btn-primary px-3 btn-sm add_product_variation"><i class="fa fa-plus-circle"></i>&nbsp;Ajouter</button>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                {# <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button> #}
                <button type="button" class="btn btn-sm prod_save ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </form>
    </div>
</div>
{% endblock %}
