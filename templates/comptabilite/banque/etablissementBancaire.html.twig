 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/etablissement.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3">
        <div class="p-3">
            <form id="formBanque">
                <h5 class="title_form text-black text-uppercase">Cr√©ation banque</h5>
                <div class="row">
                    <div class="col-md-4">
                        <label for="cmp_banque_nom" class="mt-2 font-weight-bold">Nom</label>
                        <input type="text" name="cmp_banque_nom" oninput="this.value = this.value.toUpperCase();" id="cmp_banque_nom" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="" class="mt-2 font-weight-bold">&nbsp;</label>
                        <button type="submit" class="btn btn-sm btn-perso-one btn-block"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="barre_dashed mt-3 p-3">
            <h5 class="title_form text-black text-uppercase">Liste des banques</h5>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nom</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for banque in banques %}
                            <tr>
                                <td class="elem_nom_banque">{{banque.nom}}</td>
                                <td class="text-center align-middle">
                                    <button data-value="{{banque.id}}" class="btn btn-sm btn_banque_update btn-outline-warning font-smaller"><i class="fa fa-edit"></i></button>
                                    <button data-value="{{banque.id}}" class="btn btn-sm btn_banque_delete btn-outline-danger ml-1 font-smaller"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


