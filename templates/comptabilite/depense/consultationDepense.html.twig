 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/consultationDepense.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3 pb-4">
        <div class="row">
            <div class="col-md-6">
                <label for="nom" class="mt-2 font-weight-bold">Bénéficiaire</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>

        <div class="barre_left rounded shadow mt-3">
            <div class="d-flex flex-row align-items-center justify-content-center">
                <div class="w-100 px-3 height_box d-flex flex-column justify-content-center">
                    <h5 class="title_form title_barre_left text-uppercase"><i class="fa fa-arrow-circle-right"></i>&nbsp;Janvier 2023</h5>
                    <span class="ml-3">4 Elément(s)</span>
                </div>
                <div class="w-100 height_box border-left d-flex flex-column align-items-center justify-content-center px-3">
                    <h6 class="title_form text-black text-uppercase">Mode Paiement</h6>
                    <div class="d-flex w-100 align-items-center justify-content-center elemModePaiement">
                        <div class="rounded-left fixed_height" id="ttpPaiement_1" data-content="Espèce :"  style="background-color: #f4511e ; width: 35% ;" title="test" ></div>
                        <div class="fixed_height" id="ttpPaiement_2" data-content="Chèque :"  style="background-color: #1565c0 ; width: 0.5% ;" title="test" ></div>
                        <div class="fixed_height" id="ttpPaiement_3" data-content="Virement :"  style="background-color: #ffca28 ; width: 5.5% ;" title="test" ></div>
                        <div class="fixed_height" id="ttpPaiement_4" data-content="Carte Bancaire :"  style="background-color: #ec407a ; width: 40% ;" title="test" ></div>
                        <div class="rounded-right fixed_height" id="ttpPaiement_5" data-content="Mobile Money :"  style="background-color: #009688 ; width: 10% ;" title="test" ></div>
                    </div>
                </div>
                <div class="w-100 height_box border-left d-flex flex-column align-items-center justify-content-center px-3">
                    <h6 class="title_form text-black text-uppercase">Motif</h6>
                    <div class="d-flex w-100 elemMotif align-items-center justify-content-center" >
                        <div class="fixed_height rounded-left" id="ttpMotif_1" data-content="Motif :" style="background-color: #03a9f4 ; width: 20% ;"></div>
                        <div class="fixed_height rounded-right" id="ttpMotif_2" data-content="Motif :" style="background-color: #cddc39 ; width: 60% ;" ></div>
                    </div>
                </div>
                <div class="w-100 height_box px-3 border-left d-flex flex-column align-items-center justify-content-center">
                    <h6 class="title_form text-black text-uppercase">Montant</h6>
                    <span>450000</span>
                </div>
            </div>
            <div class="px-3">
                <div class="table-responsive mt-3">
                    <table class="table table-sm table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Date</th>
                                <th>Elément</th>
                                <th>Bénéficiaire</th>
                                <th>N° Facture</th>
                                <th>Service</th>
                                <th>Motif</th>
                                <th>Mode Paiement</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="elemDepense">
                            {% set i = 1 %}
                            {% for depense in depenses %}
                                <tr>
                                    <td>{{depense.dateDeclaration}}</td>
                                    <td>{{depense.element|upper}}</td>
                                    <td>{{depense.beneficiaire|upper}}</td>
                                    <td>{{depense.numFacture}}</td>
                                    <td>{{depense.service}}</td>
                                    <td>{{depense.motif|upper}}</td>
                                    <td>{{depense.modePaiement|upper}}</td>
                                    <td>{{depense.montant}}</td>
                                    <td class="align-middle">
                                        <div class="fixed_height rounded w-100" id="ttpStatut_{{i}}" data-content="{{depense.statut|upper|raw}}"  style="background-color: #1565c0 ;" title="test" ></div>
                                    </td>
                                    <td class="text-center align-middle">
                                        <a href="{{path('compta_depense_details',{'id':depense.encodedId})}}" class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                                {% set i = i + 1 %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


