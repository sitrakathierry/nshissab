 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3 pb-4">
        <div class="row">
            <div class="col-md-6">
                <label for="nom" class="mt-2 font-weight-bold">Bénéficiaire</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>

        <div class="barre_left rounded shadow mt-3">
            <div class="d-flex flex-row align-items-center justify-content-center">
                <div class="w-100 px-3 py-2">
                    <h5 class="title_form title_barre_left text-uppercase"><i class="fa fa-arrow-circle-right"></i>&nbsp;Janvier 2023</h5>
                    <span class="ml-3">4 Elément(s)</span>
                </div>
                <div class="w-100 border-left d-flex flex-column align-items-center justify-content-center px-3 py-2">
                    <h6 class="title_form text-black text-uppercase">Mode Paiement</h6>
                    <div class="d-flex w-100">
                        <div class="p-2 rounded-left w-25" id="ttpPaiement_1" data-content="Espèce : 25%"  style="background-color: #f4511e ;" title="test" ></div>
                        <div class="p-2 w-25" id="ttpPaiement_2" data-content="Chèque : 25%"  style="background-color: #1565c0 ;" title="test" ></div>
                        <div class="p-2 w-25 " id="ttpPaiement_3" data-content="Virement : 25%"  style="background-color: #ffca28 ;" title="test" ></div>
                        <div class="p-2 rounded-right w-25" id="ttpPaiement_4" data-content="Carte Bancaire : 25%"  style="background-color: #ec407a ;" title="test" ></div>
                    </div>
                </div>
                <div class="w-100 border-left d-flex flex-column align-items-center justify-content-center px-3 py-2">
                    <h6 class="title_form text-black text-uppercase">Motif</h6>
                    <div class="d-flex w-100">
                        <div class="p-2  rounded-left w-50" style="background-color: #03a9f4 ;"></div>
                        <div class="p-2 rounded-right w-50 " style="background-color: #cddc39 ;" ></div>
                    </div>
                </div>
                <div class="w-100 px-3 border-left text-center py-2">
                    <h6 class="title_form text-black text-uppercase">Montant</h6>
                    <span>450000</span>
                </div>
            </div>
            <div class="px-3">
                <div class="table-responsive mt-3">
                    <table class="table table-sm table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Date</th>
                                <th>Bénéficiaire</th>
                                <th>N° Facture</th>
                                <th>Service</th>
                                <th>Motif</th>
                                <th>Mode Paiement</th>
                                <th>Montant</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td class="text-center align-middle">
                                    <button class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


