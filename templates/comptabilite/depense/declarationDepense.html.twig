 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-2">
        <div class="row">
            <div class="col-md-4">
                <label for="nom" class="mt-2 font-weight-bold">Nom Concerné</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="nom" class="mt-2 font-weight-bold">Elément</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-5">
                <label for="nom" class="mt-2 font-weight-bold">Service</label>
                <div class="row">
                    <div class="col-md-9">
                        <input type="text" name="prod_type" oninput="this.value = this.value.toUpperCase();" id="prod_type" class="form-control" placeholder=". . .">
                        <input type="hidden" name="add_new_detail" id="add_new_detail" class="form-control" value="OUI">
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-sm prd_existing_depense btn-purple btn-block"><i class="fa fa-layer-group"></i></button>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Motif</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="nom" class="mt-3 font-weight-bold">Mode de paiement</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-3 font-weight-bold">Montant</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-3 font-weight-bold">N° Virement</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-3 font-weight-bold">Date Virement</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="nom" class="mt-3 font-weight-bold">Facture N°</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-4">
                <label for="nom" class="mt-3 font-weight-bold">Facture Mois de </label>
                <div class="row">
                    <div class="col-md-7">
                        <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-5">
                        <input type="number" step="any" name="nom" id="nom" class="form-control" placeholder="{{ 'now'|date('Y') }}">
                    </div>
                </div>
            </div>
        </div>
        <div class="w-100 mt-3">
            <label for="depense_editor" class="mt-2 font-weight-bold">Description</label>
            <textarea name="depense_editor" class="form-control depense_editor" id="depense_editor" cols="10" rows="5"></textarea>
        </div>
        <div class="mt-3 py-3 barre_dashed w-100">
            <h5 class="title_form text-black text-uppercase">Détails des dépenses</h5>
            <div class="row">
                <div class="col-md-5">
                    <label for="nom" class=" font-weight-bold">Désignation</label>
                    <div class="row">
                        <div class="col-md-9">
                            <input type="text" name="prod_type" oninput="this.value = this.value.toUpperCase();" id="prod_type" class="form-control" placeholder=". . .">
                            <input type="hidden" name="add_new_detail" id="add_new_detail" class="form-control" value="OUI">
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-sm prd_existing_depense btn-purple btn-block"><i class="fa fa-layer-group"></i></button>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <label for="nom" class=" font-weight-bold">Quantité</label>
                    <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-3">
                    <label for="nom" class=" font-weight-bold">Prix Unitaire</label>
                    <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-2">
                    <label for="nom" class=" font-weight-bold">&nbsp;</label>
                    <button class="btn btn-block btn-sm btn-success text-uppercase"><i class="fa fa-plus-square"></i>&nbsp;Ajouter</button>
                </div>
            </div>
            <div class="table-responsive mt-3">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Désignation</th>
                            <th>Quantité</th>
                            <th>Prix Unitaire</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>-</td>
                            <td>-</td>
                            <td>-</td>
                            <td class="text-center align-middle">
                                <button class="btn btn-sm btn-outline-danger font-smaller"><i class="fa fa-times"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7"></div>
            <div class="col-md-5"> 
                <label for="nom" class="mt-1 font-weight-bold">Date déclaration,</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fa fa-calendar"></i></span>
                    </div>
                    <input type="text" class="form-control cmd_date" name="cmd_date" value="{{ 'now'|date('d/m/Y') }}" placeholder=". . ." aria-label="Date Facture" id="cmd_date">
                </div>
            </div>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}

