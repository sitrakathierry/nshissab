 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/recettes.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pb-3">
        <div class="row">
            <div class="col-md-12">
                <label for="" class="mt-2 font-weight-bold text-uppercase">Type de paiement</label>
                <div class="w-100 d-flex flex-row align-items-center">
                        <button data-value="" data-libelle="{{'Tous'|upper}}" class="btn btn-sm search_recette_type_paiement btn-info mx-2"><i class="fa fa-check"></i>&nbsp;{{'Tous'|upper}}</button>
                    {% for paiement in paiements %}
                        {% if paiement.reference != 'AC' and paiement.reference != 'CR' %}
                            <button data-value="{{paiement.id}}" data-libelle="{{paiement.nom|upper}}" class="btn btn-sm search_recette_type_paiement btn-outline-info mx-2">{{paiement.nom|upper}}</button>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="search_recette_entrepot" class="mt-3 font-weight-bold text-uppercase">Entrepôt</label>
                <select name="search_recette_entrepot" class="custom-select chosen_select custom-select-sm" id="search_recette_entrepot">
                    <option value="">TOUS</option>
                    {% for entrepot in entrepots %}
                        <option value="{{entrepot.id}}">{{entrepot.nom|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="search_recette_type" class="mt-3 font-weight-bold text-uppercase">Type Recette</label>
                <select name="search_recette_type" class="custom-select chosen_select custom-select-sm" id="search_recette_type">
                    <option value="">TOUS</option>
                    {% for typeRecette in typeRecettes %}
                        <option value="{{typeRecette.refRecette}}">{{typeRecette.recette|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="search_recette_numero" class="mt-3 font-weight-bold text-uppercase">Numéro</label>
                <select name="search_recette_numero" class="custom-select chosen_select custom-select-sm" id="search_recette_numero">
                    <option value="">TOUS</option>
                    {% for numFact in numFacts %}
                        <option value="{{numFact.id}}">{{numFact.numero}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="search_recette_date" class="mt-3 font-weight-bold text-uppercase">Date</label>
                <select name="search_recette_date" class="custom-select chosen_select custom-select-sm" id="search_recette_date">
                    <option value="" data-critere="">TOUS</option>
                    {% for critereDate in critereDates %}
                        <option value="{{critereDate.id}}" data-critere="{{critereDate.critere}}">{{critereDate.nom|upper}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row mt-3 elem_date"></div>
        <div class="row mt-3">
            <div class="col-3 content_caisse_journalier">
                <label for="">&nbsp;</label>
                <button class="btn btn-outline-success btn_rct_caisse_jour btn-block text-uppercase btn-sm"><i class="fa fa-cube"></i>&nbsp;Caisse Journalière</button>
            </div>
            <div class="col-3">
                <label for="">&nbsp;</label>
                <button class="btn btn-danger btn-block btn_rct_caisse_pdf text-uppercase btn-sm"><i class="fa fa-file-pdf"></i>&nbsp;Pdf</button>
            </div>
        </div>
        <div class="mt-3 contentElemRecette">
            <div class="table-responsive general_height pb-0 ">
                <table class="table table-sm mb-0 table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Date</th>
                            <th>Numero</th>
                            <th>Entrepot</th>
                            <th>Type Paiement</th>
                            <th>Type Recette</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set totalGeneral = 0 %}
                        {% for recetteGenerale in recetteGenerales %}
                            {% set anneeNow = 'now'|date('Y') %}
                            {% set anneeActuel = recetteGenerale.date|split('/') %}
                            {% if anneeActuel[2] == anneeNow  %}
                                <tr>
                                    <td>{{recetteGenerale.date}}</td>
                                    <td>{{recetteGenerale.numero}}</td>
                                    <td>{{recetteGenerale.entrepot|upper}}</td>
                                    <td>{{recetteGenerale.typePaiement|upper}}</td>
                                    <td>{{recetteGenerale.recette|upper}}</td>
                                    <td>{{recetteGenerale.montant}}</td>
                                </tr>
                                {% set totalGeneral = totalGeneral + recetteGenerale.montant %}
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <table class="table table-sm table-bordered" style="font-size: 0.95em;">
                <tr>
                    <th>Total General</th>
                    <th class="bg-primary text-white" style="width: 120px;">{{totalGeneral}}</th>
                </tr>
            </table>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


