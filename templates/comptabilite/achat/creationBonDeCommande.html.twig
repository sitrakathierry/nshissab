 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3">
        <div class="row">
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Nom concerné*</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Fournisseur</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Type de paiement</label>
                <select name="cmd_bon_search_date" class="custom-select chosen_select cmd_bon_search_date custom-select-sm" id="cmd_bon_search_date">
                    <option value="" >-</option>
                    <option value="" >PAIEMENT EN TOTALITE</option>
                    <option value="" >PAIEMENT PARTIELLE</option>
                    {# {% for critereDate in critereDates %}
                        <option value="{{critereDate.id}}" data-critere="{{critereDate.critere}}">{{critereDate.nom|upper}}</option>
                    {% endfor %} #}
                </select>
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Mode de paiement</label>
                <select name="cmd_bon_search_date" class="custom-select chosen_select cmd_bon_search_date custom-select-sm" id="cmd_bon_search_date">
                    <option value="" >-</option>
                    <option value="" >ESPECE</option>
                    <option value="" >SOUS CREDIT</option>
                    {# {% for critereDate in critereDates %}
                        <option value="{{critereDate.id}}" data-critere="{{critereDate.critere}}">{{critereDate.nom|upper}}</option>
                    {% endfor %} #}
                </select>
            </div>
        </div>
        <div class="w-100  mt-3">
            <label for="nom" class="font-weight-bold">Description</label>
            <textarea name="compta_achat_editor" id="compta_achat_editor" class="compta_achat_editor form-control" cols="30" rows="10"></textarea>
        </div>
        <div class="w-100 mt-4 barre_dashed p-3">
            <h5 class="title_form text-black text-uppercase">Ajout Marchandise</h5>
            <div class="row">
                <div class="col-md-5">
                    <label for="nom" class="font-weight-bold">Marchandise</label>
                    <select name="cmd_bon_search_date" class="custom-select chosen_select cmd_bon_search_date custom-select-sm" id="cmd_bon_search_date">
                    <option value="" >-</option>
                    {# {% for critereDate in critereDates %}
                        <option value="{{critereDate.id}}" data-critere="{{critereDate.critere}}">{{critereDate.nom|upper}}</option>
                    {% endfor %} #}
                </select>
                </div>
                <div class="col-md-1">
                    <label for="" class="font-weight-bold">&nbsp;</label>
                    <button class="btn btn-sm btn-primary btn-block text-uppersace"><i class="fa fa-plus-circle"></i></button>
                </div>
                <div class="col-md-2">
                    <label for="nom" class="font-weight-bold">Quantité</label>
                    <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-2">
                    <label for="nom" class="font-weight-bold">Prix Unitaire</label>
                    <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-2">
                    <label for="" class="font-weight-bold">&nbsp;</label>
                    <button class="btn btn-sm btn-success btn-block text-uppersace"><i class="fa fa-database"></i>&nbsp;Ajouter</button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Marchandise</th>
                        <th>Quantite</th>
                        <th>Prix Unitaire</th>
                        <th>Montant Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td class="text-center align-middle">
                            {# <button class="btn btn-sm btn-outline-success font-smaller text-uppercase"><i class="fa fa-check"></i></button> #}
                            <button class="btn btn-sm btn-outline-danger ml-1 font-smaller"><i class="fa fa-times"></i></button>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3">Total General</th>
                        <th colspan="2" class="text-white bg-primary">0</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


