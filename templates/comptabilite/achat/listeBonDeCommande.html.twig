 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row">
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Date</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">N° Commande</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Fournisseur</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Type de paiement</label>
                <select name="cmd_bon_search_date" class="custom-select chosen_select cmd_bon_search_date custom-select-sm" id="cmd_bon_search_date">
                    <option value="" >-</option>
                    <option value="" >PAIEMENT EN TOTALITE</option>
                    <option value="" >PAIEMENT PARTIELLE</option>
                    {# {% for critereDate in critereDates %}
                        <option value="{{critereDate.id}}" data-critere="{{critereDate.critere}}">{{critereDate.nom|upper}}</option>
                    {% endfor %} #}
                </select>
            </div>
            <div class="col-md-3">
                <label for="nom" class="mt-2 font-weight-bold">Mode de paiement</label>
                <select name="cmd_bon_search_date" class="custom-select chosen_select cmd_bon_search_date custom-select-sm" id="cmd_bon_search_date">
                    <option value="" >-</option>
                    <option value="" >ESPECE</option>
                    <option value="" >SOUS CREDIT</option>
                    {# {% for critereDate in critereDates %}
                        <option value="{{critereDate.id}}" data-critere="{{critereDate.critere}}">{{critereDate.nom|upper}}</option>
                    {% endfor %} #}
                </select>
            </div>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-sm table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Date</th>
                        <th>N° Commande</th>
                        <th>Fournisseur</th>
                        <th>Type</th>
                        <th>Mode</th>
                        <th>Marchandises</th>
                        <th>Quantité</th>
                        <th>Prix Unitaire</th>
                        <th>Montant Total</th>
                        <th></th>
                        <th>Statut</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td rowspan="8" class="align-middle">-</td>
                        <td rowspan="8" class="align-middle">-</td>
                        <td rowspan="8" class="align-middle">-</td>
                        <td rowspan="8" class="align-middle">-</td>
                        <td rowspan="8" class="align-middle">-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td class="text-center align-middle">
                            <button class="btn btn-sm btn-success font-smaller">{{"Livré"|upper}}</button>
                        </td>
                        <td rowspan="8" class="text-center align-middle">
                            <div class="w-100 d-flex flex-column align-items-center justify-content-center">
                                <b class="text-success">{{"En Cours"|upper}}</b>
                                <b class="mt-2">{{"Terminé"|upper}}</b>
                            </div>
                        </td>
                        <td rowspan="8" class="text-center align-middle">
                            <div class="w-100 d-flex flex-column align-items-center justify-content-center">
                                <button class="btn btn-sm btn-outline-warning font-smaller"><i class="fa fa-edit"></i></button>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td class="text-center align-middle">
                            <button class="btn btn-sm btn-outline-success font-smaller"><i class="fa fa-check"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td class="text-center align-middle">
                            <button class="btn btn-sm btn-success font-smaller">{{"Livré"|upper}}</button>
                        </td>
                    </tr>
                    <tr>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td class="text-center align-middle">
                            <button class="btn btn-sm btn-outline-success font-smaller"><i class="fa fa-check"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <th colspan="3">Total</th>
                        <th colspan="2" class="text-white bg-secondary">-</th>
                    </tr>
                    <tr>
                        <th colspan="3">Total Credit</th>
                        <th colspan="2" class="text-white bg-info">-</th>
                    </tr>
                    <tr>
                        <th colspan="3">Total Payé</th>
                        <th colspan="2" class="text-white bg-success">-</th>
                    </tr>
                    <tr>
                        <th colspan="3">Total Restant</th>
                        <th colspan="2" class="text-white bg-purple">-</th>
                    </tr>
                    <tr class="bg-light border_dark">
                        <td colspan="12"></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="8" >Total General</th>
                        <th colspan="4" class="text-white bg-primary">-</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


