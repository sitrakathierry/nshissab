{% extends 'menu/index.html.twig' %}

{% block title %}Creation société{% endblock %}

{% block body %}
<form id="formSociete">
    <div class="barre_top rounded shadow mb-5">
        <div class="w-100 border-bottom pt-2 px-3">
            <h4 class="text-uppercase entete_page text-black">Creation de société</h4>
        </div>
        <div class="container-fluid px-3 pt-3">
            <h5 class="title_form text-black text-uppercase">Information société</h5>
            <div class="row"> 
                <div class="col-md-6 px-3">
                    <label for="nom" class="mt-2 font-weight-bold">Nom</label>
                    <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                    <label for="region" class="mt-3 font-weight-bold">Région</label>
                    <input type="text" name="region" id="region" class="form-control" placeholder=". . .">

                    <label for="capacite" class="mt-3 font-weight-bold">Nombre de compte</label>
                    <input type="number" name="capacite" id="capacite" class="form-control" placeholder=". . .">

                </div>
                <div class="col-md-6 px-3">
                    <label for="adresse" class="mt-2 font-weight-bold">Adresse</label>
                    <input type="text" name="adresse" id="adresse" class="form-control" placeholder=". . .">

                    <label for="telephone" class="mt-3 font-weight-bold">Téléphone</label>
                    <input type="text" name="telephone" id="telephone" class="form-control" placeholder=". . .">
                </div>
            </div>
            <h5 class="title_form text-black text-uppercase mt-4">Compte du responsable</h5>
            <div class="row"> 
                <div class="col-md-4">
                    <label for="username" class="mt-2 font-weight-bold">Nom d'utilisateur*</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-4">
                    <label for="email" class="mt-2 font-weight-bold">Email* </label>
                    <input type="email" name="email" id="email"  class="form-control" placeholder=". . ." required>
                </div>
                <div class="col-md-4">
                    <label for="password" class="mt-2 font-weight-bold">Mot de passe</label>
                    <input type="text" name="password" id="password" class="form-control" placeholder=". . ." value="{{password}}">
                </div>
                <div class="col-md-4">
                    <label for="poste" class="mt-3 font-weight-bold">Reponsabilité</label>
                    <input type="text" name="poste" id="poste" class="form-control" placeholder=". . .">
                </div>
                <div class="col-md-4">
                    <label for="poste" class="mt-3 font-weight-bold">Abonnement jusqu'au</label>
                    <input type="text" name="abonnement" id="abonnement" class="form-control" placeholder=". . .">
                </div>
            </div>
            <div class="w-100">
                <div class="badge badge-success w-100 badge_pass py-1 mt-3">Forte</div>
                    <div class="alert alert-info alert_pass mt-2">
                        <ul class="list-unstyled">
                            <li><i class="fa fa-info-circle"></i>&nbsp;Le mot  de passe doit contenir au minimum 8 caractères, à savoir : </li>
                            <li>Au moins une lettre minuscule,</li>
                            <li>Une lettre majuscule,</li>
                            <li>Un caractère spécial,</li>
                            <li>Un chiffre,</li>
                        </ul>
                    </div>
            </div>
            <div class="foot_action p-3 text-right w-100 barre_dashed">
                <button class="btn btn-perso-one" type="submit"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        </div>
    </div>
</form>
{% endblock %}
