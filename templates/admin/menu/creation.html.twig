{% extends 'menu/index.html.twig' %}

{% block title %}Creation menu{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/stylesheets/admin/menu/creation.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/javascript/admin/menu/creation.js')}}" ></script>

{% endblock %}
{% block body %}
<form id="formCreation">
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom py-2 px-3">
        <a href="{{path('menu_corbeille')}}" type="button" class="btn btn-primary btn-sm float-right"><i class="fa fa-trash"></i>&nbsp;Corbeille</a>
        <h4 class="text-uppercase entete_page text-black">Creation menu (obligation de collaborer avec un développeur) {{ hostname }} </h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row mx-3">
            <div class="col-md-6">
                <h5 class="title_form text-black text-uppercase">Information à remplir</h5>

                <input type="hidden" value="enregistrer" name="type" class="type" >
                <input type="hidden" name="idMenu" class="idMenu"> 
                <label for="menu_parent_id" class="mt-2 font-weight-bold">Parent</label>
                <select name="menu_parent_id" class="custom-select" id="menu_parent_id">
                    <option value="0" selected>AUCUN</option>
                    {% for liste in listes %}
                        <option value="{{liste.id}}">{{liste.nom|upper}} ({{liste.parent|upper}})</option>
                    {% endfor %}
                </select>

                <div class="row mt-2 ">
                    <div class="col-md-8">
                        <label for="icone" class="font-weight-bold">Icone</label>
                        <input type="text" name="icone" class="form-control" id="icone" placeholder=". . .">
                    </div>
                    <div class="col-md-4 d-flex icone_menu text-center">
                        <i class="fa fa-building"></i>
                    </div>
                </div>

                <label for="nom" class="mt-2 font-weight-bold">Nom</label>
                <input type="text" name="nom" class="form-control" oninput="this.value = this.value.toUpperCase();" id="nom" placeholder=". . .">

                <label for="route" class="mt-2 font-weight-bold">Route</label>
                <input type="text" name="route" class="form-control" id="route" placeholder=". . .">

                <label for="rang" class="mt-2 font-weight-bold">Rang</label>
                <input type="number" name="rang" name="nom" class="form-control" id="rang" placeholder=". . .">
            </div>
            <div class="col-md-6"> 
                {% include 'admin/menu/template.html.twig' with menus %}
            </div>
        </div>
        <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
            <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
            <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
        </div>
    </div>
</div>
</form>
{% endblock %}
