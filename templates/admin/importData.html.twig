 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <form id="formDataImport">
            <div class="row">
                <div class="col-4">
                    <label for="nom" class="mt-2 font-weight-bold">Agence</label>
                    <select name="prod_categorie" class="custom-select chosen_select custom-select-sm" id="prod_categorie">
                        <option value="">-</option> 
                        {% for agence in agences %}
                            <option value="{{agence.id}}" >{{agence.nom|upper}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-4">
                    <label for="nom" class="mt-2 font-weight-bold">Module</label>
                    <select name="prod_categorie" class="custom-select chosen_select custom-select-sm" id="prod_categorie">
                        <option value="">-</option>
                        {% for module in modules %}
                            <option value="{{module.id}}" >{{module.nom|upper}}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <h5 class="title_form mt-3 mb-2 text-black text-uppercase">Produits (Gestion de Stock)</h5>
            <div class="w-100">
                <ul class="list-unstyled list-inline">
                    <li class="text-success mx-4 list-inline-item text-uppercase"><span class="font-weight-bold">Catégorie</span> : </li>
                    <li class="text-success mx-4 list-inline-item text-uppercase"><span class="font-weight-bold">Code Produit</span> : </li>
                    <li class="text-success mx-4 list-inline-item text-uppercase"><span class="font-weight-bold">Unité</span> : </li>
                    <li class="text-success mx-4 list-inline-item text-uppercase"><span class="font-weight-bold">Nom</span> : </li>
                    <li class="text-success mx-4 list-inline-item text-uppercase"><span class="font-weight-bold">Désignation</span> : </li>
                </ul>
            </div>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Indice</th>
                            <th>Entrepôt</th>
                            <th>Fournisseur</th>
                            <th>Prix Achat</th>
                            <th>Charge</th>
                            <th>Prix revient</th>
                            <th>Marge</th>
                            <th>Stock</th>
                            <th>Stock Alert</th>
                            <th>Prix de vente</th>
                            <th>Expirée le</th>
                        </tr>
                    </thead>    
                </table>
            </div>
    
            {% if with_foot %}
                <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                    <button type="submit" class="btn px-4 btn-sm ml-3 btn-success"><i class="fa fa-download"></i>&nbsp;Importer les données (format Excel : "nomFichier".xlsx)</button>
                </div>
            {% endif %} 
        </form>
    </div>
</div>
{% endblock %}


