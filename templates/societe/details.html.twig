 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row">
            <div class="col-md-5 px-5">
            <div class="w-100 mb-2 text-center">
                <img src="{{asset('data/images/building.png')}}" class="img custom_logo  img-thumbnail img-fluid" alt="">
            </div>
                <button class="btn btn-primary btn-sm w-100">Définir un logo . . .</button>
            </div>
            <div class="col-md-7 pl-3 custom_padding">
                <label for="nom" class="font-weight-bold">Nom</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="mt-3 font-weight-bold">Région</label>
                <input type="text" name="region" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="mt-3 font-weight-bold">Adresse</label>
                <input type="text" name="adresse" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="mt-3 font-weight-bold">Téléphone</label>
                <input type="text" name="telephone" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white bjr_rudy"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}
