 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <form id="formMarchandise"> 
            <div class="px-3 pb-3 mt-2">
                <h5 class="title_form text-black text-uppercase">Création marchandise</h5>
                <div class="row">
                    <div class="col-md-4">
                        <label for="ach_mrch_designation" class="font-weight-bold">Désignation</label>
                        <input type="text" name="designation" oninput="this.value = this.value.toUpperCase();" id="ach_mrch_designation" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label for="ach_mrch_prix" class="font-weight-bold">Prix</label>
                        <input type="number" step="any" name="prix" id="ach_mrch_prix" class="form-control" placeholder=". . .">
                    </div>
                    <div class="col-md-3">
                        <label class="font-weight-bold">&nbsp;</label>
                        <button type="submit" class="btn btn-sm btn-block btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
                    </div>
                </div>
            </div>
        </form>
        
        <div class="barre_dashed p-3">
            <h5 class="title_form text-black text-uppercase">Liste des marchandises</h5>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Designation</th>
                            <th>Prix</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for marchandise in marchandises %}
                        <tr>
                            <td class="elem_designation">{{marchandise.designation}}</td>
                            <td class="elem_prix">{{marchandise.prix}}</td>
                            <td class="text-center align-middle">
                                <button value="{{marchandise.id}}" class="btn btn-sm btn-outline-warning ach_edit_marchandise font-smaller"><i class="fa fa-edit"></i></button>
                                <button value="{{marchandise.id}}" class="btn btn-sm btn-outline-danger ach_delete_marchandise ml-1 font-smaller"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}


