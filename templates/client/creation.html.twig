 {% extends 'menu/index.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('tools/personnal/systeme/' ~ filename ~ '/css/' ~ filename ~ '.css')}}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('tools/personnal/systeme/' ~ filename ~ '/js/' ~ filename ~ '.js')}}" ></script>
{% endblock %}
{% block body %}
<div class="barre_top rounded shadow mb-5">
    <div class="w-100 border-bottom pt-2 px-3">
        <h4 class="text-uppercase entete_page text-black">{{titlePage}}</h4>
    </div>
    <div class="container-fluid px-3 pt-3">
        <div class="row">
            <div class="col-md-6">
                <label for="nom" class="font-weight-bold">Société</label>
                <h6 class="font-weight-bold text-primary">HIKAM SM MADA</h6>
            </div>
            <div class="col-md-6 px-4">
                <label for="statut" class="font-weight-bold">Statut*</label>
                <select name="statut" class="custom-select custom-select-sm" id="statut">
                    <option value="">AUCUN</option>
                </select>
            </div>
        </div>
        <h5 class="title_form mt-3 text-black text-uppercase">Information société</h5>
        <div class="row">
            <div class="col-md-6 px-4">
                <label for="nom_societe" class="font-weight-bold">Nom société*</label>
                <input type="text" name="nom_societe" id="nom_societe" class="form-control" placeholder=". . .">

                <label for="adresse" class="font-weight-bold mt-3">Adresse</label>
                <input type="text" name="adresse" id="adresse" class="form-control" placeholder=". . .">

                <label for="fax" class="font-weight-bold mt-3">Fax</label>
                <input type="text" name="fax" id="fax" class="form-control" placeholder=". . .">

                <label for="domaine_intervention" class="font-weight-bold mt-3">Domaine d'intervention</label>
                <input type="text" name="domaine_intervention" id="domaine_intervention" class="form-control" placeholder=". . .">

                <label for="type_societe" class="font-weight-bold mt-3">Type de société</label>
                <select name="type_societe" class="custom-select custom-select-sm" id="type_societe">
                    <option value="">AUCUN</option>
                </select>
            </div>
            <div class="col-md-6 px-4">
                <label for="nom" class="font-weight-bold">Nom et prénom du gérant</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="font-weight-bold mt-3">Téléphone fixe*</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="font-weight-bold mt-3">Email</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="font-weight-bold mt-3">N° de registre</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        <h5 class="title_form mt-3 text-black text-uppercase">Personne à contacter</h5>
        <div class="row">
            <div class="col-md-6 px-4">
                <label for="nom" class="font-weight-bold">Nom et prénom</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">

                <label for="nom" class="font-weight-bold mt-3">Email</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
            <div class="col-md-6 px-4">
                <label for="nom" class="font-weight-bold">Téléphone</label>
                <input type="text" name="nom" id="nom" class="form-control" placeholder=". . .">
            </div>
        </div>
        

        {% if with_foot %}
            <div class="foot_action p-3 mt-4 text-right w-100 barre_dashed">
                <button type="button" class="btn btn-sm effacerTout btn-secondary text-white"><i class="fa fa-close"></i>&nbsp;Annuler</button>
                <button type="submit" class="btn btn-sm ml-3 enregistre_create_menu btn-perso-one"><i class="fa fa-save"></i>&nbsp;Enregistrer</button>
            </div>
        {% endif %} 
    </div>
</div>
{% endblock %}
